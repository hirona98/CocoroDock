<UserControl x:Class="CocoroDock.Controls.CharacterManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1000"
             d:DesignWidth="1000">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- キャラクター選択 -->
                <GroupBox Header="キャラクター選択"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Select Character (Restart Required)">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="85"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="CharacterSelectComboBox"
                                  Grid.Column="0"
                                  Margin="0,5,10,5"
                                  SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                  DisplayMemberPath="modelName"
                                  SelectedValuePath="modelName">
                        </ComboBox>

                        <Button x:Name="AddCharacterButton"
                                Grid.Column="1"
                                Content="追加"
                                Margin="0,5,0,5"
                                Padding="10,5"
                                Click="AddCharacterButton_Click"
                                ToolTip="Add character"/>

                        <Button x:Name="DuplicateCharacterButton"
                                Grid.Column="2"
                                Content="複製"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Click="DuplicateCharacterButton_Click"
                                ToolTip="Duplicate current character"/>

                        <Button x:Name="DeleteCharacterButton"
                                Grid.Column="3"
                                Content="削除"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="DeleteCharacterButton_Click"
                                ToolTip="Delete this character"/>
                    </Grid>
                </GroupBox>

                <!-- 基本設定 -->
                <GroupBox Header="基本設定"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Basic setting">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="名前:"
                                       VerticalAlignment="Center"
                                       ToolTip="Name"/>
                            <TextBox Grid.Column="1"
                                     x:Name="CharacterNameTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     TextChanged="CharacterNameTextBox_TextChanged"/>
                        </Grid>

                        <!-- VRMFilePathの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="VRMファイル:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="VRMFilePathTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="2"
                                    x:Name="BrowseVrmFileButton"
                                    Content="開く..."
                                    Padding="10,0"
                                    Click="BrowseVrmFileButton_Click"
                                    ToolTip="Open..."
                                    Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- マテリアル・影設定 -->
                <GroupBox Header="マテリアル・影設定"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <!-- MToon変換設定 -->
                        <CheckBox x:Name="ConvertMToonCheckBox"
                                  Content="UnlitをMToonに変換する（正常に表示されないときに試してください）"
                                  Foreground="#FF4873CF"
                                  ToolTip="Convert Unlit to MToon"/>

                        <!-- 影オフメッシュ設定 -->
                        <CheckBox x:Name="EnableShadowOffCheckBox"
                                  Content="指定したメッシュに影を落とさない"
                                  Foreground="#FF4873CF"
                                  ToolTip="Enable shadow off mesh"
                                  Checked="EnableShadowOffCheckBox_Checked"
                                  Unchecked="EnableShadowOffCheckBox_Unchecked"
                                  Margin="0,10,0,0"/>

                        <!-- 影オフメッシュ名設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="メッシュ名:"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                            <TextBox Grid.Column="1"
                                     x:Name="ShadowOffMeshTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     ToolTip="カンマ区切りでメッシュ名を入力 (例: Face, U_Char_1)"/>
                        </Grid>
                        <!-- 影設定説明テキスト -->
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            顔など特定のメッシュに影を落としたくない場合に使用します
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- LLMパラメータ -->
                <GroupBox Header="言語生成AI"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel Margin="1,0,0,0">

                        <Grid>
                            <CheckBox x:Name="IsUseLLMCheckBox"
                                      Content="LLMを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use LLM"/>
                        </Grid>

                        <!-- LLMモデルの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="LLM:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="LlmModelTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     Text=""/>
                        </Grid>
                        <!-- LLM説明テキスト -->
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="100,0,0,0">
                            <TextBlock.Inlines>
                                <Run Text="LiteLLM の書式で記載してください"/>
                                <LineBreak/>
                                <Run Text="ex) openai/gpt-4o-mini, gemini/gemini-2.0-flash, ollama_chat/gemma3:12b"/>
                                <LineBreak/>
                                <Run Text="詳細は "/>
                                <Hyperlink NavigateUri="https://docs.litellm.ai/docs/providers"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="https://docs.litellm.ai/docs/providers"/>
                                </Hyperlink>
                                <Run Text=" を参照してください"/>
                                <LineBreak/>
                                <Run Text="内部で複雑なプロンプトを使っているため小規模モデルだと正常動作しない可能性があります"/>
                            </TextBlock.Inlines>
                        </TextBlock>

                        <!-- APIキーの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="API Key:"
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBox x:Name="ApiKeyPasswordBox"
                                         Foreground="#FF4873CF"
                                         Padding="2"
                                         ToolTip="Enter your API key"
                                         Width="200"
                                         HorizontalAlignment="Left"/>
                                <Button Content="上書き貼付け"
                                        Margin="10,0,0,0"
                                        Padding="10,0,10,0"
                                        Click="ApiKeyPasteOverrideButton_Click"
                                        ToolTip="クリップボードのテキストで上書き"/>
                            </StackPanel>
                        </Grid>

                        <!-- 会話履歴件数の設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="会話履歴件数:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="MaxTurnsWindowTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     ToolTip="会話履歴として送信する会話の件数"/>
                        </Grid>
                        <!-- 会話履歴件数説明テキスト -->
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="100,0,0,0">
                            LLMに送信する過去の会話履歴の件数（短期記憶）です。大きくするほど文脈を理解しやすくなりますが、トークン消費量も増加します
                        </TextBlock>

                        <!-- Base URLの設定（ローカルLLM用） -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Base URL:"
                                       VerticalAlignment="Center"/>
                            <Grid Grid.Column="1">
                                <TextBox x:Name="BaseUrlTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         Text=""/>
                                <TextBlock x:Name="BaseUrlPlaceholder"
                                           Text="ローカルLLM使用時はBase URLを設定可能です（例: http://127.0.0.1:1234/v1）"
                                           Foreground="#999999"
                                           VerticalAlignment="Center"
                                           Margin="5,5,0,5"
                                           IsHitTestVisible="False"
                                           Visibility="Visible"/>
                            </Grid>
                        </Grid>

                        <!-- Vision Model -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="画像用LLM:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="VisionModelTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     Text=""
                                     ToolTip="画像分析用のVisionモデル"/>
                        </Grid>

                        <!-- Vision説明テキスト -->
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="100,0,0,0">
                            CocoroAIでは画像説明生成とそれに対するコメント生成で2回LLMを呼び出します。
                            <LineBreak/>
                            画像のみローカルにしたり低コストAPIにしたりできます。
                        </TextBlock>

                        <!-- Vision API Key -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="画像用API Key:"/>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBox x:Name="VisionApiKeyPasswordBox"
                                         Foreground="#FF4873CF"
                                         Padding="2"
                                         ToolTip="画像分析用のAPIキー（空の場合は上記のAPIキーを使用）"
                                         Width="200"
                                         HorizontalAlignment="Left"/>
                                <Button Content="上書き貼付け"
                                        Margin="10,0,0,0"
                                        Padding="10,0,10,0"
                                        Click="VisionApiKeyPasteOverrideButton_Click"
                                        ToolTip="クリップボードのテキストで上書き"/>
                            </StackPanel>
                        </Grid>


                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="System Prompt:"
                                       ToolTip="Prompt"/>
                            <TextBox Grid.Column="1"
                                     x:Name="SystemPromptTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     Height="200"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>

                        <!-- Memory IDの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Memory ID:"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"/>
                            <TextBox Grid.Column="1"
                                     x:Name="MemoryIdTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     Text=""/>
                        </Grid>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="100,0,0,0">
                            あなたとキャラクターの記憶を紐づけるIDです。キャラクター毎に別の名前にすることを推奨します。
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- TTSパラメータ -->
                <GroupBox Header="音声合成"
                          Margin="0,0,20,0"
                          Padding="10">
                    <StackPanel>
                        <Grid>
                            <CheckBox x:Name="IsUseTTSCheckBox"
                                      Content="TTSを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use TTS"/>
                        </Grid>

                        <!-- TTSエンジンの選択 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="エンジン:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      x:Name="TTSEngineComboBox"
                                      SelectionChanged="TTSEngineComboBox_SelectionChanged">
                                <ComboBoxItem Content="VOICEVOX/SHAREVOX/AivisSpeech"
                                              Tag="voicevox"/>
                                <ComboBoxItem Content="Style-Bert-VITS2"
                                              Tag="style-bert-vits2"/>
                                <ComboBoxItem Content="Aivis Cloud API"
                                              Tag="aivis-cloud"/>
                            </ComboBox>
                        </Grid>

                        <!-- VOICEVOX用設定 -->
                        <StackPanel x:Name="VoicevoxSettingsPanel">
                            <!-- Endpoint URL -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Endpoint URL:"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         x:Name="VoicevoxEndpointUrlTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         Text=""/>
                            </Grid>

                            <!-- Speaker ID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker ID:"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         x:Name="VoicevoxSpeakerIdTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         Text=""/>
                            </Grid>

                            <!-- VOICEVOX詳細設定 -->
                            <Expander x:Name="VoicevoxAdvancedSettingsPanel"
                                      Margin="0,10,0,0"
                                      IsExpanded="False">
                                <Expander.Header>
                                    <TextBlock Text="VOICEVOX詳細設定"
                                               Foreground="#FF4873CF"/>
                                </Expander.Header>
                                <StackPanel>
                                    <!-- Speed Scale -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="話速:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <Slider Grid.Column="1"
                                                x:Name="VoicevoxSpeedScaleSlider"
                                                Minimum="0.5"
                                                Maximum="2.0"
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=VoicevoxSpeedScaleSlider, Path=Value, StringFormat=F1}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                    </Grid>
                                    <!-- Pitch Scale -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="音高:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <Slider Grid.Column="1"
                                                x:Name="VoicevoxPitchScaleSlider"
                                                Minimum="-0.15"
                                                Maximum="0.15"
                                                Value="0.0"
                                                TickFrequency="0.01"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=VoicevoxPitchScaleSlider, Path=Value, StringFormat=F2}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                    </Grid>
                                    <!-- Intonation Scale -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="抑揚:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <Slider Grid.Column="1"
                                                x:Name="VoicevoxIntonationScaleSlider"
                                                Minimum="0.0"
                                                Maximum="2.0"
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=VoicevoxIntonationScaleSlider, Path=Value, StringFormat=F1}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                    </Grid>
                                    <!-- Volume Scale -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="音量:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <Slider Grid.Column="1"
                                                x:Name="VoicevoxVolumeScaleSlider"
                                                Minimum="0.0"
                                                Maximum="2.0"
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=VoicevoxVolumeScaleSlider, Path=Value, StringFormat=F1}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                    </Grid>
                                    <!-- Pre Phoneme Length -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="前無音:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <Slider Grid.Column="1"
                                                x:Name="VoicevoxPrePhonemeLengthSlider"
                                                Minimum="0.0"
                                                Maximum="1.5"
                                                Value="0.1"
                                                TickFrequency="0.05"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=VoicevoxPrePhonemeLengthSlider, Path=Value, StringFormat=F2}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                    </Grid>
                                    <!-- Post Phoneme Length -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="後無音:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <Slider Grid.Column="1"
                                                x:Name="VoicevoxPostPhonemeLengthSlider"
                                                Minimum="0.0"
                                                Maximum="1.5"
                                                Value="0.1"
                                                TickFrequency="0.05"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=VoicevoxPostPhonemeLengthSlider, Path=Value, StringFormat=F2}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                    </Grid>
                                    <!-- Output Sampling Rate -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="サンプリング:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <ComboBox Grid.Column="1"
                                                  x:Name="VoicevoxOutputSamplingRateComboBox"
                                                  SelectedValue="24000">
                                            <ComboBoxItem Content="16000 Hz"
                                                          Tag="16000"/>
                                            <ComboBoxItem Content="22050 Hz"
                                                          Tag="22050"/>
                                            <ComboBoxItem Content="24000 Hz"
                                                          Tag="24000"/>
                                            <ComboBoxItem Content="44100 Hz"
                                                          Tag="44100"/>
                                            <ComboBoxItem Content="48000 Hz"
                                                          Tag="48000"/>
                                        </ComboBox>
                                    </Grid>
                                    <!-- Output Stereo -->
                                    <Grid Margin="0,10,0,0">
                                        <CheckBox Grid.Column="1"
                                                  x:Name="VoicevoxOutputStereoCheckBox"
                                                  Content="ステレオ出力を有効にする"
                                                  Foreground="#FF4873CF"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>

                        </StackPanel>

                        <!-- Style-Bert-VITS2用設定：基本設定 -->
                        <StackPanel x:Name="StyleBertVits2BasicPanel">
                            <!-- Endpoint URL -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Endpoint URL:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2EndpointUrlTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>

                            <!-- Model Name -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Model Name:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2ModelNameTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>

                            <!-- Model ID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Model ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2ModelIdTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>

                            <!-- Speaker Name -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker Name:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2SpeakerNameTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>

                            <!-- Speaker ID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2SpeakerIdTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>
                        </StackPanel>

                        <!-- Style-Bert-VITS2用設定：詳細設定 -->
                        <Expander x:Name="StyleBertVits2SettingsPanel"
                                  Margin="0,10,0,0"
                                  IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="Style-Bert-VITS2 詳細設定"
                                           Foreground="#FF4873CF"/>
                            </Expander.Header>
                            <StackPanel>
                                <!-- Style -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Style:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2StyleTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- Style Weight -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Style Weight:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2StyleWeightTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- Language -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Language:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2LanguageTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- SDP Ratio -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="SDP Ratio:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2SdpRatioTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- Noise -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Noise:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2NoiseTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- Noise W -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Noise W:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2NoiseWTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- Length -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Length:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2LengthTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>

                                <!-- Auto Split -->
                                <Grid Margin="0,10,0,0">
                                    <CheckBox x:Name="SBV2AutoSplitCheckBox"
                                              Content="Auto Split"
                                              Foreground="#FF4873CF"/>
                                </Grid>

                                <!-- Split Interval -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Split Interval:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2SplitIntervalTextBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"/>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- AivisCloud用設定 -->
                        <StackPanel x:Name="AivisCloudSettingsPanel">
                            <!-- API Key -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="API Key:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <TextBox x:Name="AivisCloudApiKeyPasswordBox"
                                             Foreground="#FF0078D7"
                                             Padding="2"
                                             ToolTip="Aivis Cloud APIキー"
                                             Width="200"
                                             HorizontalAlignment="Left"/>
                                    <Button Content="上書き貼付け"
                                            Margin="10,0,0,0"
                                            Padding="10,0,10,0"
                                            Click="AivisCloudApiKeyPasteOverrideButton_Click"
                                            ToolTip="クリップボードのテキストで上書き"/>
                                </StackPanel>
                            </Grid>

                            <!-- Model UUID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Model UUID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudModelUuidTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         ToolTip="音声合成モデルのUUID"/>
                            </Grid>

                            <!-- Speaker UUID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker UUID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudSpeakerUuidTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         ToolTip="スピーカーUUID（オプション）"/>
                            </Grid>

                            <!-- Style ID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Style ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudStyleIdTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         ToolTip="スタイルID"/>
                            </Grid>

                            <!-- 詳細設定 -->
                            <Expander x:Name="AivisCloudAdvancedSettingsPanel"
                                      Margin="0,10,0,0"
                                      IsExpanded="False">
                                <Expander.Header>
                                    <TextBlock Text="Aivis Cloud API詳細設定"
                                               Foreground="#FF4873CF"/>
                                </Expander.Header>
                                <StackPanel>
                                    <!-- Speaking Rate -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="話速:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudSpeakingRateTextBox"
                                                 Foreground="#FF0078D7"
                                                 Padding="2"
                                                 ToolTip="話速 (0.5-2.0)"/>
                                    </Grid>

                                    <!-- Emotional Intensity -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="感情強度:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudEmotionalIntensityTextBox"
                                                 Foreground="#FF0078D7"
                                                 Padding="2"
                                                 ToolTip="感情表現の強さ (0.0-2.0)"/>
                                    </Grid>

                                    <!-- Tempo Dynamics -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="テンポ変化:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudTempoDynamicsTextBox"
                                                 Foreground="#FF0078D7"
                                                 Padding="2"
                                                 ToolTip="テンポの緩急 (0.0-2.0)"/>
                                    </Grid>

                                    <!-- Volume -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="音量:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudVolumeTextBox"
                                                 Foreground="#FF0078D7"
                                                 Padding="2"
                                                 ToolTip="音量 (0.0-2.0)"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- STTパラメータ -->
                <!-- TODO: Whisper対応時
                <GroupBox Header="音声認識 (AmiVoice/Whisper)"
                -->
                <GroupBox Header="音声認識 (現状AmiVoiceのみ)"
                          Padding="10"
                          Margin="0,20,20,0">
                    <StackPanel>
                        <Grid>
                            <CheckBox x:Name="IsUseSTTCheckBox"
                                      Content="STTを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use STT"/>
                        </Grid>

                        <!-- STTエンジンの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="エンジン:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      x:Name="STTEngineComboBox"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="AmiVoice"
                                              Tag="amivoice"/>
                                <!-- TODO: Whisper対応時
                                <ComboBoxItem Content="Whisper(OpenAI)"
                                              Tag="openai"/>
                                -->
                            </ComboBox>
                        </Grid>

                        <!-- STT起動ワードの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Wake Word:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="STTWakeWordTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     ToolTip="Wake word for STT"/>
                        </Grid>
                        <!-- STT起動ワード説明テキスト -->
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="100,0,0,0">
                            音声認識を開始するキーワードです。複数設定する場合はカンマ区切りで入力してください
                            <LineBreak/>
                            （例: こんにちは, ハロー, ミク）。空欄の場合は常に音声認識が有効になります。
                        </TextBlock>

                        <!-- STT APIキーの設定 -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="STT API Key:"
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBox x:Name="STTApiKeyPasswordBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         Width="200"
                                         HorizontalAlignment="Left"/>
                                <Button Content="上書き貼付け"
                                        Margin="10,0,0,0"
                                        Padding="10,0,10,0"
                                        Click="STTApiKeyPasteOverrideButton_Click"
                                        ToolTip="クリップボードのテキストで上書き"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>