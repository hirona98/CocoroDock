<UserControl x:Class="CocoroDock.Controls.CharacterManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- キャラクター選択 -->
                <GroupBox Header="キャラクター選択"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Select Character (Restart Required)">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="85"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="CharacterSelectComboBox"
                                  Grid.Column="0"
                                  Margin="0,5,10,5"
                                  SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                  Foreground="#FF4873CF">
                        </ComboBox>

                        <Button x:Name="AddCharacterButton"
                                Grid.Column="1"
                                Content="追加"
                                Margin="0,5,0,5"
                                Padding="10,5"
                                Click="AddCharacterButton_Click"
                                Foreground="#FF4873CF"
                                ToolTip="Add character"/>

                        <Button x:Name="DuplicateCharacterButton"
                                Grid.Column="2"
                                Content="複製"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Click="DuplicateCharacterButton_Click"
                                Foreground="#FF4873CF"
                                ToolTip="Duplicate current character"/>

                        <Button x:Name="DeleteCharacterButton"
                                Grid.Column="3"
                                Content="削除"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Background="#d32f2f"
                                Foreground="WhiteSmoke"
                                Click="DeleteCharacterButton_Click"
                                ToolTip="Delete this character"/>
                    </Grid>
                </GroupBox>

                <!-- 基本設定 -->
                <GroupBox Header="基本設定"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Basic setting">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="名前:"
                                       VerticalAlignment="Center"
                                       ToolTip="Name"/>
                            <TextBox Grid.Column="1"
                                     x:Name="CharacterNameTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"/>
                        </Grid>

                        <!-- VRMFilePathの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="VRMファイル:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="VRMFilePathTextBox"
                                     Margin="0,5,5,5"
                                     Foreground="#FF0078D7"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="2"
                                    x:Name="BrowseVrmFileButton"
                                    Content="開く..."
                                    Padding="10,0"
                                    Click="BrowseVrmFileButton_Click"
                                    ToolTip="Open..."
                                    VerticalAlignment="Center"
                                    Foreground="#FF4873CF"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- マテリアル・影設定 -->
                <GroupBox Header="マテリアル・影設定"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <!-- MToon変換設定 -->
                        <CheckBox x:Name="ConvertMToonCheckBox"
                                  Content="UnlitをMToonに変換する（正常に表示されないときに試してください）"
                                  Margin="0,5,0,10"
                                  Foreground="#FF4873CF"
                                  ToolTip="Convert Unlit to MToon"/>

                        <!-- 影オフメッシュ設定 -->
                        <CheckBox x:Name="EnableShadowOffCheckBox"
                                  Content="指定したメッシュに影を落とさない"
                                  Margin="0,5,0,5"
                                  Foreground="#FF4873CF"
                                  ToolTip="Enable shadow off mesh"
                                  Checked="EnableShadowOffCheckBox_Checked"
                                  Unchecked="EnableShadowOffCheckBox_Unchecked"/>

                        <!-- 影オフメッシュ名設定 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="メッシュ名:"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                            <TextBox Grid.Column="1"
                                     x:Name="ShadowOffMeshTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     ToolTip="カンマ区切りでメッシュ名を入力 (例: Face, U_Char_1)"/>
                        </Grid>
                        <!-- 影設定説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            顔など特定のメッシュに影を落としたくない場合に使用します
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- LLMパラメータ -->
                <GroupBox Header="言語生成AI"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel Margin="1,0,0,0">

                        <Grid Margin="0,5">
                            <CheckBox x:Name="IsUseLLMCheckBox"
                                      Content="LLMを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use LLM"/>
                        </Grid>

                        <!-- APIキーの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="API Key:"
                                       VerticalAlignment="Center"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="ApiKeyPasswordBox"
                                         Margin="0,5"
                                         PasswordChar="●"
                                         Foreground="#FF4873CF"
                                         ToolTip="Enter your API key"/>
                        </Grid>

                        <!-- LLMモデルの設定 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="LLM Model:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="LlmModelTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>
                        <!-- LLM説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            <TextBlock.Inlines>
                                <Run Text="LiteLLM の書式で記載してください"/>
                                <LineBreak/>
                                <Run Text="ex) openai/gpt-4o-mini, gemini/gemini-2.0-flash, ollama_chat/gemma3:12b"/>
                                <LineBreak/>
                                <Run Text="詳細は "/>
                                <Hyperlink NavigateUri="https://docs.litellm.ai/docs/providers"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="https://docs.litellm.ai/docs/providers"/>
                                </Hyperlink>
                                <Run Text=" を参照してください"/>
                            </TextBlock.Inlines>
                        </TextBlock>

                        <!-- Base URLの設定（ローカルLLM用） -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Base URL:"
                                       VerticalAlignment="Center"/>
                            <Grid Grid.Column="1">
                                <TextBox x:Name="BaseUrlTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         Text=""
                                         ToolTip="ローカルLLMのベースURL (例: http://localhost:11434)"/>
                                <TextBlock x:Name="BaseUrlPlaceholder"
                                           Text="ローカルLLM使用時のみ入力してください"
                                           Foreground="#999999"
                                           VerticalAlignment="Center"
                                           Margin="5,5,0,5"
                                           IsHitTestVisible="False"
                                           Visibility="Visible"/>
                            </Grid>
                        </Grid>
                        <!-- LLM説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            <TextBlock.Inlines>
                                <Run Text="ローカルLLM使用時はBase URLも設定してください（例: http://localhost:11434）"/>
                                <LineBreak/>
                            </TextBlock.Inlines>
                        </TextBlock>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Prompt:"
                                       VerticalAlignment="Top"
                                       ToolTip="Prompt"/>
                            <TextBox Grid.Column="1"
                                     x:Name="SystemPromptTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Height="100"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 記憶機能 -->
                <GroupBox Header="長期記憶"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel Margin="1,0,0,0">
                        <!-- 記憶機能の有効/無効設定 -->
                        <Grid Margin="0,10,0,5">
                            <CheckBox x:Name="IsEnableMemoryCheckBox"
                                      Content="記憶を保持する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Enable memory"/>
                        </Grid>

                        <!-- ユーザーIDの設定 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Memory ID:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="UserIdTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>
                        <!-- ユーザーID説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            長期記憶を保存する時にキャラクターとあなたを紐づけるIDです。変更すると別人と認識されます。
                        </TextBlock>

                        <!-- 埋め込みモデル設定 -->
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="API Key:"
                                       VerticalAlignment="Center"
                                       ToolTip="API Key"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="EmbeddedApiKeyPasswordBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="埋め込みモデル:"
                                       VerticalAlignment="Center"
                                       ToolTip="Embedded Model"/>
                            <TextBox Grid.Column="1"
                                     x:Name="EmbeddedModelTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>

                        <!-- 埋め込みモデル説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            <TextBlock.Inlines>
                                <Run Text="長期記憶をベクトル化するための埋め込みモデルを設定します。LiteLLM の書式で記載してください。"/>
                                <LineBreak/>
                                <Run Text="ex) openai/text-embedding-3-large（推奨）, openai/text-embedding-3-small, gemini/text-embedding-004"/>
                                <LineBreak/>
                                <Run Text="※1536次元のモデルに最適化されています"/>
                                <LineBreak/>
                                <Run Text="詳細は "/>
                                <Hyperlink NavigateUri="https://docs.litellm.ai/docs/embedding/supported_embedding"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="https://docs.litellm.ai/docs/embedding/supported_embedding"/>
                                </Hyperlink>
                                <Run Text=" を参照してください"/>
                            </TextBlock.Inlines>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- TTSパラメータ -->
                <GroupBox Header="音声合成"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <CheckBox x:Name="IsUseTTSCheckBox"
                                      Content="TTSを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use TTS"/>
                        </Grid>

                        <!-- TTSエンジンの選択 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="エンジン:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      x:Name="TTSEngineComboBox"
                                      Margin="0,5"
                                      Foreground="#FF4873CF"
                                      SelectionChanged="TTSEngineComboBox_SelectionChanged">
                                <ComboBoxItem Content="VOICEVOX/SHAREVOX/AivisSpeech"
                                              Tag="voicevox"/>
                                <ComboBoxItem Content="Style-Bert-VITS2（動作未確認！）"
                                              Tag="style-bert-vits2"/>
                                <ComboBoxItem Content="Aivis Cloud"
                                              Tag="aivis-cloud"/>
                            </ComboBox>
                        </Grid>

                        <!-- VOICEVOX用設定 -->
                        <StackPanel x:Name="VoicevoxSettingsPanel">
                            <!-- Endpoint URL -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Endpoint URL:"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         x:Name="TTSEndpointURLTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         Text=""/>
                            </Grid>

                            <!-- Speaker ID -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker ID:"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         x:Name="TTSSperkerIDTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         Text=""/>
                            </Grid>
                        </StackPanel>

                        <!-- Style-Bert-VITS2用設定：基本設定 -->
                        <StackPanel x:Name="StyleBertVits2BasicPanel">
                            <!-- Endpoint URL -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Endpoint URL:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2EndpointUrlTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                            </Grid>

                            <!-- Model Name -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Model Name:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2ModelNameTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                            </Grid>

                            <!-- Model ID -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Model ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2ModelIdTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                            </Grid>

                            <!-- Speaker Name -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker Name:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2SpeakerNameTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                            </Grid>

                            <!-- Speaker ID -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="SBV2SpeakerIdTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                            </Grid>
                        </StackPanel>

                        <!-- Style-Bert-VITS2用設定：詳細設定 -->
                        <Expander x:Name="StyleBertVits2SettingsPanel"
                                  Margin="0,5"
                                  IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="Style-Bert-VITS2 詳細設定"
                                           Foreground="#FF4873CF"/>
                            </Expander.Header>
                            <StackPanel Margin="10,10,0,10">
                                <!-- Style -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Style:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2StyleTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- Style Weight -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Style Weight:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2StyleWeightTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- Language -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Language:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2LanguageTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- SDP Ratio -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="SDP Ratio:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2SdpRatioTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- Noise -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Noise:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2NoiseTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- Noise W -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Noise W:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2NoiseWTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- Length -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Length:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2LengthTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>

                                <!-- Auto Split -->
                                <Grid Margin="0,5">
                                    <CheckBox x:Name="SBV2AutoSplitCheckBox"
                                              Content="Auto Split"
                                              Foreground="#FF4873CF"/>
                                </Grid>

                                <!-- Split Interval -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Split Interval:"
                                               VerticalAlignment="Center"
                                               Foreground="#FF4873CF"/>
                                    <TextBox Grid.Column="1"
                                             x:Name="SBV2SplitIntervalTextBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"/>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- AivisCloud用設定 -->
                        <StackPanel x:Name="AivisCloudSettingsPanel">
                            <!-- Endpoint URL -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Endpoint URL:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudEndpointUrlTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         ToolTip="AivisCloud エンドポイントURL"/>
                            </Grid>

                            <!-- API Key -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="API Key:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <PasswordBox Grid.Column="1"
                                             x:Name="AivisCloudApiKeyPasswordBox"
                                             Margin="0,5"
                                             Foreground="#FF0078D7"
                                             ToolTip="AivisCloud APIキー"/>
                            </Grid>

                            <!-- Model UUID -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Model UUID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudModelUuidTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         ToolTip="音声合成モデルのUUID"/>
                            </Grid>

                            <!-- Speaker UUID -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Speaker UUID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudSpeakerUuidTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         ToolTip="スピーカーUUID（オプション）"/>
                            </Grid>

                            <!-- Style ID -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Style ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="AivisCloudStyleIdTextBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"
                                         ToolTip="スタイルID"/>
                            </Grid>

                            <!-- 詳細設定 -->
                            <Expander x:Name="AivisCloudAdvancedSettingsPanel"
                                      Margin="0,5"
                                      IsExpanded="False">
                                <Expander.Header>
                                    <TextBlock Text="AivisCloud 詳細設定"
                                               Foreground="#FF4873CF"/>
                                </Expander.Header>
                                <StackPanel Margin="10,10,0,10">
                                    <!-- Speaking Rate -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="話速:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudSpeakingRateTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="話速 (0.5-2.0)"/>
                                    </Grid>

                                    <!-- Emotional Intensity -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="感情強度:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudEmotionalIntensityTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="感情表現の強さ (0.0-2.0)"/>
                                    </Grid>

                                    <!-- Tempo Dynamics -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="テンポ変化:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudTempoDynamicsTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="テンポの緩急 (0.0-2.0)"/>
                                    </Grid>

                                    <!-- Volume -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="音量:"
                                                   VerticalAlignment="Center"
                                                   Foreground="#FF4873CF"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="AivisCloudVolumeTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="音量 (0.0-2.0)"/>
                                    </Grid>

                                    <!-- Enable Streaming -->
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="AivisCloudEnableStreamingCheckBox"
                                                  Content="ストリーミング有効"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="リアルタイム音声合成を有効にする"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- STTパラメータ -->
                <GroupBox Header="音声認識 (AmiVoice/Whisper)"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <CheckBox x:Name="IsUseSTTCheckBox"
                                      Content="STTを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use STT"/>
                        </Grid>

                        <!-- STTエンジンの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="エンジン:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      x:Name="STTEngineComboBox"
                                      Margin="0,5"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="AmiVoice"
                                              Tag="amivoice"/>
                                <ComboBoxItem Content="Whisper(OpenAI)"
                                              Tag="openai"/>
                            </ComboBox>
                        </Grid>

                        <!-- STT起動ワードの設定 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Wake Word:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="STTWakeWordTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     ToolTip="Wake word for STT"/>
                        </Grid>
                        <!-- STT起動ワード説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            音声認識を開始するキーワードです。複数設定する場合はカンマ区切りで入力してください（例: こんにちは, ハロー, ミク）。起動直後は反応が遅くなることがあります。
                        </TextBlock>

                        <!-- STT APIキーの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="STT API Key:"
                                       VerticalAlignment="Center"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="STTApiKeyPasswordBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>