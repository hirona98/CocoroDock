<UserControl x:Class="CocoroDock.Controls.CharacterManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- キャラクター選択 -->
                <GroupBox Header="キャラクター選択"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Select Character (Restart Required)">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="85"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="CharacterSelectComboBox"
                                  Grid.Column="0"
                                  Margin="0,5,10,5"
                                  SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                  Foreground="#FF4873CF">
                        </ComboBox>

                        <Button x:Name="AddCharacterButton"
                                Grid.Column="1"
                                Content="追加"
                                Margin="0,5,0,5"
                                Padding="10,5"
                                Click="AddCharacterButton_Click"
                                Foreground="#FF4873CF"
                                ToolTip="Add character"/>

                        <Button x:Name="DuplicateCharacterButton"
                                Grid.Column="2"
                                Content="複製"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Click="DuplicateCharacterButton_Click"
                                Foreground="#FF4873CF"
                                ToolTip="Duplicate current character"/>

                        <Button x:Name="DeleteCharacterButton"
                                Grid.Column="3"
                                Content="削除"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Background="#d32f2f"
                                Foreground="WhiteSmoke"
                                Click="DeleteCharacterButton_Click"
                                ToolTip="Delete this character"/>
                    </Grid>
                </GroupBox>

                <!-- 基本設定 -->
                <GroupBox Header="基本設定"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Basic setting">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="名前:"
                                       VerticalAlignment="Center"
                                       ToolTip="Name"/>
                            <TextBox Grid.Column="1"
                                     x:Name="CharacterNameTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"/>
                        </Grid>

                        <!-- VRMFilePathの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="VRMファイル:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="VRMFilePathTextBox"
                                     Margin="0,5,5,5"
                                     Foreground="#FF0078D7"
                                     IsReadOnly="True"/>
                            <Button Grid.Column="2"
                                    x:Name="BrowseVrmFileButton"
                                    Content="開く..."
                                    Padding="10,0"
                                    Click="BrowseVrmFileButton_Click"
                                    ToolTip="Open..."
                                    VerticalAlignment="Center"
                                    Foreground="#FF4873CF"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- マテリアル・影設定 -->
                <GroupBox Header="マテリアル・影設定"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <!-- MToon変換設定 -->
                        <CheckBox x:Name="ConvertMToonCheckBox"
                                  Content="UnlitをMToonに変換する（正常に表示されないときに試してください）"
                                  Margin="0,5,0,10"
                                  Foreground="#FF4873CF"
                                  ToolTip="Convert Unlit to MToon"/>

                        <!-- 影オフメッシュ設定 -->
                        <CheckBox x:Name="EnableShadowOffCheckBox"
                                  Content="指定したメッシュに影を落とさない"
                                  Margin="0,5,0,5"
                                  Foreground="#FF4873CF"
                                  ToolTip="Enable shadow off mesh"
                                  Checked="EnableShadowOffCheckBox_Checked"
                                  Unchecked="EnableShadowOffCheckBox_Unchecked"/>

                        <!-- 影オフメッシュ名設定 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="メッシュ名:"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                            <TextBox Grid.Column="1"
                                     x:Name="ShadowOffMeshTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     ToolTip="カンマ区切りでメッシュ名を入力 (例: Face, U_Char_1)"/>
                        </Grid>
                        <!-- 影設定説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            顔など特定のメッシュに影を落としたくない場合に使用します
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- LLMパラメータ -->
                <GroupBox Header="言語生成AI"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel Margin="1,0,0,0">

                        <Grid Margin="0,5">
                            <CheckBox x:Name="IsUseLLMCheckBox"
                                      Content="LLMを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use LLM"/>
                        </Grid>

                        <!-- APIキーの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="API Key:"
                                       VerticalAlignment="Center"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="ApiKeyPasswordBox"
                                         Margin="0,5"
                                         PasswordChar="●"
                                         Foreground="#FF4873CF"
                                         ToolTip="Enter your API key"/>
                        </Grid>

                        <!-- LLMモデルの設定 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="LLM Model:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="LlmModelTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>
                        <!-- LLM説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            <TextBlock.Inlines>
                                <Run Text="LiteLLM の書式で記載してください"/>
                                <LineBreak/>
                                <Run Text="ex) openai/gpt-4o-mini, gemini/gemini-2.0-flash, ollama_chat/gemma3:12b"/>
                                <LineBreak/>
                                <Run Text="詳細は "/>
                                <Hyperlink NavigateUri="https://docs.litellm.ai/docs/providers"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="https://docs.litellm.ai/docs/providers"/>
                                </Hyperlink>
                                <Run Text=" を参照してください"/>
                            </TextBlock.Inlines>
                        </TextBlock>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Prompt:"
                                       VerticalAlignment="Top"
                                       ToolTip="Prompt"/>
                            <TextBox Grid.Column="1"
                                     x:Name="SystemPromptTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Height="100"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 記憶機能 -->
                <GroupBox Header="長期記憶"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel Margin="1,0,0,0">
                        <!-- 記憶機能の有効/無効設定 -->
                        <Grid Margin="0,10,0,5">
                            <CheckBox x:Name="IsEnableMemoryCheckBox"
                                      Content="記憶を保持する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Enable memory"/>
                        </Grid>

                        <!-- ユーザーIDの設定 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Memory ID:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="UserIdTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>
                        <!-- ユーザーID説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            長期記憶を保存する時にキャラクターとあなたを紐づけるIDです。変更すると別人と認識されます。
                        </TextBlock>

                        <!-- 埋め込みモデル設定 -->
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="API Key:"
                                       VerticalAlignment="Center"
                                       ToolTip="API Key"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="EmbeddedApiKeyPasswordBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="埋め込みモデル:"
                                       VerticalAlignment="Center"
                                       ToolTip="Embedded Model"/>
                            <TextBox Grid.Column="1"
                                     x:Name="EmbeddedModelTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>

                        <!-- 埋め込みモデル説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            <TextBlock.Inlines>
                                <Run Text="長期記憶をベクトル化するための埋め込みモデルを設定します。LiteLLM の書式で記載してください。"/>
                                <LineBreak/>
                                <Run Text="ex) openai/text-embedding-3-large（推奨）, openai/text-embedding-3-small, gemini/text-embedding-004"/>
                                <LineBreak/>
                                <Run Text="※1536次元のモデルに最適化されています"/>
                                <LineBreak/>
                                <Run Text="詳細は "/>
                                <Hyperlink NavigateUri="https://docs.litellm.ai/docs/embedding/supported_embedding"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="https://docs.litellm.ai/docs/embedding/supported_embedding"/>
                                </Hyperlink>
                                <Run Text=" を参照してください"/>
                            </TextBlock.Inlines>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- TTSパラメータ -->
                <GroupBox Header="音声合成 (VOICEVOX/SHAREVOX/AivisSpeech)"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <CheckBox x:Name="IsUseTTSCheckBox"
                                      Content="TTSを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use TTS"/>
                        </Grid>

                        <!-- エンドポイントURLの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Endpoint URL:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="TTSEndpointURLTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>

                        <!-- スピーカーIDの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Sperker ID:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="TTSSperkerIDTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     Text=""/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- STTパラメータ -->
                <GroupBox Header="音声認識 (AmiVoice/Whisper)"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <CheckBox x:Name="IsUseSTTCheckBox"
                                      Content="STTを使用する"
                                      Foreground="#FF4873CF"
                                      ToolTip="Use STT"/>
                        </Grid>

                        <!-- STTエンジンの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="エンジン:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      x:Name="STTEngineComboBox"
                                      Margin="0,5"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="AmiVoice"
                                              Tag="amivoice"/>
                                <ComboBoxItem Content="Whisper(OpenAI)"
                                              Tag="openai"/>
                            </ComboBox>
                        </Grid>

                        <!-- STT起動ワードの設定 -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Wake Word:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="STTWakeWordTextBox"
                                     Margin="0,5"
                                     Foreground="#FF0078D7"
                                     ToolTip="Wake word for STT"/>
                        </Grid>
                        <!-- STT起動ワード説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Margin="100,0,0,10">
                            音声認識を開始するキーワードです。複数設定する場合はカンマ区切りで入力してください（例: こんにちは, ハロー, ミク）。起動直後は反応が遅くなることがあります。
                        </TextBlock>

                        <!-- STT APIキーの設定 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="STT API Key:"
                                       VerticalAlignment="Center"/>
                            <PasswordBox Grid.Column="1"
                                         x:Name="STTApiKeyPasswordBox"
                                         Margin="0,5"
                                         Foreground="#FF0078D7"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>