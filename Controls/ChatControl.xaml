<UserControl x:Class="CocoroDock.Controls.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CocoroDock.Controls"
             xmlns:converters="clr-namespace:CocoroDock.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="600">

        <UserControl.Resources>
                <!-- コンバーター -->
                <converters:PercentageConverter x:Key="PercentageConverter"/>

                <!-- バブルスタイル定義 -->
                <Style x:Key="UserBubbleStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="#4873CF"/>
                        <Setter Property="CornerRadius"
                                Value="10,10,0,10"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Margin"
                                Value="50,5,10,5"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Right"/>
                        <Setter Property="MaxWidth"
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth, Converter={StaticResource PercentageConverter}, ConverterParameter=0.9}"/>
                </Style>

                <Style x:Key="AiBubbleStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="#b5c7eb"/>
                        <Setter Property="CornerRadius"
                                Value="10,10,10,0"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Margin"
                                Value="10,5,50,5"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Left"/>
                        <Setter Property="MaxWidth"
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth, Converter={StaticResource PercentageConverter}, ConverterParameter=0.9}"/>
                </Style>

                <!-- システムメッセージバブルスタイル -->
                <Style x:Key="SystemMessageBubbleStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="White"/>
                        <Setter Property="BorderBrush"
                                Value="#4873CF"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="10"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Margin"
                                Value="20,5,20,5"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
                        <Setter Property="MaxWidth"
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth, Converter={StaticResource PercentageConverter}, ConverterParameter=0.8}"/>
                </Style>

                <!-- メッセージテキストスタイル -->
                <Style x:Key="UserMessageTextStyle"
                       TargetType="TextBlock">
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="WhiteSmoke"/>
                </Style>
                <Style x:Key="AiMessageTextStyle"
                       TargetType="TextBlock">
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="#FF303030"/>
                </Style>

                <!-- システムメッセージテキストスタイル -->
                <Style x:Key="SystemMessageTextStyle"
                       TargetType="TextBlock">
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="#4873CF"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
                </Style>
        </UserControl.Resources>

        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- チャット表示エリア -->
                <ScrollViewer x:Name="ChatScrollViewer"
                              Grid.Row="0"
                              Margin="5"
                              Background="#FAFAFA"
                              VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatMessagesPanel">
                                <!-- チャットメッセージがここに追加されます -->
                        </StackPanel>
                </ScrollViewer>

                <!-- 入力エリア -->
                <Grid Grid.Row="1"
                      Margin="5">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                CornerRadius="5">
                                <TextBox x:Name="MessageTextBox"
                                         Height="55"
                                         MinHeight="55"
                                         MaxHeight="180"
                                         Padding="5"
                                         FontSize="14"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Top"
                                         PreviewKeyDown="MessageTextBox_KeyDown"
                                         TextWrapping="Wrap"
                                         MaxLength="1000"
                                         AcceptsReturn="True"/>
                        </Border>

                        <Button x:Name="SendButton"
                                Grid.Column="1"
                                Content="送信"
                                Width="60"
                                Height="55"
                                Margin="5,0,0,0"
                                Click="SendButton_Click"
                                Background="#4873CF"
                                Foreground="WhiteSmoke"
                                BorderThickness="0"
                                FontSize="14">
                                <Button.Resources>
                                        <Style TargetType="Border">
                                                <Setter Property="CornerRadius"
                                                        Value="5"/>
                                        </Style>
                                </Button.Resources>
                        </Button>
                </Grid>
        </Grid>
</UserControl>