<UserControl x:Class="CocoroDock.Controls.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CocoroDock.Controls"
             xmlns:converters="clr-namespace:CocoroDock.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="600">

        <UserControl.Resources>
                <!-- コンバーター -->
                <converters:PercentageConverter x:Key="PercentageConverter"/>

                <!-- ボタンスタイル（無効状態対応） -->
                <Style x:Key="DisabledButtonStyle"
                       TargetType="Button">
                        <Setter Property="Background"
                                Value="#4873CF"/>
                        <Setter Property="Foreground"
                                Value="WhiteSmoke"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          Content="{TemplateBinding Content}"
                                                                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsEnabled"
                                                                 Value="False">
                                                                <Setter Property="Background"
                                                                        Value="#CCCCCC"/>
                                                                <Setter Property="Foreground"
                                                                        Value="#888888"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                                <Setter Property="Background"
                                                                        Value="#5A84D9"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed"
                                                                 Value="True">
                                                                <Setter Property="Background"
                                                                        Value="#3A62B8"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- バブルスタイル定義 -->
                <Style x:Key="UserBubbleStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="#4873CF"/>
                        <Setter Property="CornerRadius"
                                Value="10,10,0,10"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Margin"
                                Value="50,5,10,5"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Right"/>
                        <Setter Property="MaxWidth"
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth, Converter={StaticResource PercentageConverter}, ConverterParameter=0.9}"/>
                </Style>

                <Style x:Key="AiBubbleStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="#b5c7eb"/>
                        <Setter Property="CornerRadius"
                                Value="10,10,10,0"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Margin"
                                Value="10,5,50,5"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Left"/>
                        <Setter Property="MaxWidth"
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth, Converter={StaticResource PercentageConverter}, ConverterParameter=0.9}"/>
                </Style>

                <!-- システムメッセージバブルスタイル -->
                <Style x:Key="SystemMessageBubbleStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="White"/>
                        <Setter Property="BorderBrush"
                                Value="#4873CF"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="10"/>
                        <Setter Property="Padding"
                                Value="10"/>
                        <Setter Property="Margin"
                                Value="20,5,20,5"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
                        <Setter Property="MaxWidth"
                                Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ActualWidth, Converter={StaticResource PercentageConverter}, ConverterParameter=0.8}"/>
                </Style>

                <!-- メッセージテキストスタイル -->
                <Style x:Key="UserMessageTextStyle"
                       TargetType="TextBox">
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="WhiteSmoke"/>
                        <Setter Property="IsReadOnly"
                                Value="True"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="Cursor"
                                Value="IBeam"/>
                </Style>
                <Style x:Key="AiMessageTextStyle"
                       TargetType="TextBox">
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="#FF303030"/>
                        <Setter Property="IsReadOnly"
                                Value="True"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="Cursor"
                                Value="IBeam"/>
                </Style>

                <!-- システムメッセージテキストスタイル -->
                <Style x:Key="SystemMessageTextStyle"
                       TargetType="TextBox">
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="#4873CF"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
                        <Setter Property="IsReadOnly"
                                Value="True"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="Cursor"
                                Value="IBeam"/>
                </Style>
        </UserControl.Resources>

        <Grid AllowDrop="True"
              Drop="Grid_Drop"
              DragEnter="Grid_DragEnter"
              DragOver="Grid_DragOver"
              DragLeave="Grid_DragLeave">
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <!-- チャット表示エリア -->
                <ScrollViewer x:Name="ChatScrollViewer"
                              Grid.Row="0"
                              Margin="5"
                              Background="#FAFAFA"
                              VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatMessagesPanel">
                                <!-- チャットメッセージがここに追加されます -->
                        </StackPanel>
                </ScrollViewer>

                <!-- 入力エリア -->
                <Grid Grid.Row="1"
                      Margin="5">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 画像プレビューエリア -->
                        <Border x:Name="ImagePreviewBorder"
                                Grid.Row="0"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="0,0,0,5"
                                Height="100"
                                Background="#F0F0F0"
                                Visibility="Collapsed">
                                <Grid>
                                        <TextBlock Text="画像をドラッグ&amp;ドロップまたはクリップボードから貼り付け"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#999999"
                                                   x:Name="ImagePlaceholderText"/>
                                        <Image x:Name="PreviewImage"
                                               Margin="5"
                                               Stretch="Uniform"
                                               Visibility="Collapsed"/>
                                        <Button x:Name="RemoveImageButton"
                                                Content="✕"
                                                Width="25"
                                                Height="25"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="5"
                                                Background="#7F7F7F"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Visibility="Collapsed"
                                                Click="RemoveImageButton_Click">
                                                <Button.Resources>
                                                        <Style TargetType="Border">
                                                                <Setter Property="CornerRadius"
                                                                        Value="10"/>
                                                        </Style>
                                                </Button.Resources>
                                        </Button>
                                </Grid>
                        </Border>

                        <!-- テキスト入力と送信ボタン -->
                        <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid>
                                                <TextBox x:Name="MessageTextBox"
                                                         Height="55"
                                                         MinHeight="55"
                                                         MaxHeight="180"
                                                         Padding="5"
                                                         FontSize="14"
                                                         BorderThickness="0"
                                                         Background="Transparent"
                                                         VerticalContentAlignment="Top"
                                                         PreviewKeyDown="MessageTextBox_KeyDown"
                                                         TextWrapping="Wrap"
                                                         MaxLength="10485760"
                                                         AcceptsReturn="True"
                                                         AllowDrop="True"
                                                         PreviewDragEnter="TextBox_PreviewDragEnter"
                                                         PreviewDragOver="TextBox_PreviewDragOver"
                                                         PreviewDrop="TextBox_PreviewDrop"/>
                                                <TextBlock x:Name="PlaceholderText"
                                                           Text="テキストと画像の入力が可能です"
                                                           FontSize="14"
                                                           Foreground="#999999"
                                                           Margin="5,5,0,0"
                                                           IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility"
                                                                                Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Text, ElementName=MessageTextBox}"
                                                                                             Value="">
                                                                                        <Setter Property="Visibility"
                                                                                                Value="Visible"/>
                                                                                </DataTrigger>
                                                                        </Style.Triggers>
                                                                </Style>
                                                        </TextBlock.Style>
                                                </TextBlock>
                                        </Grid>
                                </Border>

                                <!-- 音声レベルバー（縦向き） -->
                                <Border x:Name="VoiceLevelBorder"
                                        Grid.Column="1"
                                        Width="10"
                                        Height="55"
                                        Margin="5,0,5,0"
                                        Background="#E0E0E0"
                                        CornerRadius="5">
                                        <Grid VerticalAlignment="Bottom">
                                                <Rectangle x:Name="VoiceLevelBar"
                                                           Width="10"
                                                           Height="0"
                                                           Fill="#4CAF50"
                                                           VerticalAlignment="Bottom"
                                                           RadiusX="5"
                                                           RadiusY="5"/>
                                        </Grid>
                                </Border>

                                <Button x:Name="SendButton"
                                        Grid.Column="2"
                                        Content="送信"
                                        Width="60"
                                        Height="55"
                                        Click="SendButton_Click"
                                        FontSize="14"
                                        Style="{StaticResource DisabledButtonStyle}"/>
                        </Grid>
                </Grid>
        </Grid>
</UserControl>