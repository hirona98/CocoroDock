                                        </ComboBox>
                                    </Grid>

                                    <!-- STT起動ワードの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Wake Word:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="STTWakeWordTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="Wake word for STT"/>
