<Window x:Class="CocoroDock.Controls.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocoroDock.Controls"
        xmlns:converters="clr-namespace:CocoroDock.Converters"
        mc:Ignorable="d"
        Title="設定"
        Height="800"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- タブスタイル -->
        <Style x:Key="AdminTabItemStyle"
               TargetType="TabItem">
            <Setter Property="Background"
                    Value="#F0F0F0"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#666666"/>
            <Setter Property="Margin"
                    Value="0,0,2,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="White"/>
                    <Setter Property="Foreground"
                            Value="#4873CF"/>
                    <Setter Property="BorderThickness"
                            Value="0,0,0,3"/>
                    <Setter Property="BorderBrush"
                            Value="#4873CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 変換器 -->
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:AnimationTypeConverter x:Key="AnimationTypeConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="AdminTabControl"
                    BorderThickness="0"
                    Background="White"
                    Grid.Row="0">

            <TabItem Header="Display"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Display Setting">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <CheckBox x:Name="TopMostCheckBox"
                                      Content="最前面に表示"
                                      Margin="0,5,0,10"
                                      Foreground="#FF4873CF"
                                      ToolTip="Always on top"/>
                            <CheckBox x:Name="EscapeCursorCheckBox"
                                      Content="カーソルから逃げる（Shiftキー押下中は無効）"
                                      Margin="0,5,0,10"
                                      ToolTip="Escape cursor (Disabled while holding down the Shift key)"
                                      Foreground="#FF4873CF"/>

                            <Grid Margin="0,5,0,10"
                                  HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="InputVirtualKeyCheckBox"
                                          Grid.Column="0"
                                          Content="右ドラッグで触ったときに仮想キー入力する"
                                          ToolTip="Enter virtual keys when touching with right drag"
                                          Foreground="#FF4873CF"
                                          VerticalAlignment="Center"/>
                                <TextBox x:Name="VirtualKeyStringTextBox"
                                         Grid.Column="1"
                                         Width="120"
                                         Margin="10,0,5,0"
                                         Foreground="#FF0078D7"
                                         IsReadOnly="True"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         Background="#FFDDDDDD"/>
                                <Button x:Name="CaptureKeyButton"
                                        Grid.Column="2"
                                        Content="Capture Key"
                                        Padding="10,0"
                                        Foreground="#FF4873CF"
                                        ToolTip="Capture key"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                            <CheckBox x:Name="AutoMoveCheckBox"
                                      Content="自動的に移動する（不安定です）"
                                      Margin="0,5,0,10"
                                      ToolTip="Auto move (unstable)"
                                      Foreground="#FF4873CF"/>
                            <CheckBox x:Name="ShowMessageWindowCheckBox"
                                      Content="発話時メッセージウィンドウを表示する"
                                      Margin="0,5,0,10"
                                      ToolTip="Show message window on speech"
                                      Foreground="#FF4873CF"/>
                            <CheckBox x:Name="AmbientOcclusionCheckBox"
                                      Content="Ambient Occlusion"
                                      Margin="0,5,0,10"
                                      ToolTip="Ambient Occlusion"
                                      Foreground="#FF4873CF"/>

                            <!-- アンチエイリアシング設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="アンチエイリアシング（MSAA）"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Anti-aliasing (MSAA)"/>
                                <ComboBox x:Name="MSAAComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="2x"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="4x"
                                                  Tag="4"/>
                                    <ComboBoxItem Content="8x"
                                                  Tag="8"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- キャラクターシャドウ設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="キャラクターの影"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Character Shadow"/>
                                <ComboBox x:Name="CharacterShadowComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Hard Shadow"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="Soft Shadow"
                                                  Tag="2"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- キャラクターシャドウレゾリューション -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="キャラクターの影の解像度"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Character Shadow Resolution"/>
                                <ComboBox x:Name="CharacterShadowResolutionComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Low"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Medium"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="High"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="Very High"
                                                  Tag="3"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- バックグラウンドシャドウ設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="背景の影"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Background Shadow"/>
                                <ComboBox x:Name="BackgroundShadowComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Hard Shadow"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="Soft Shadow"
                                                  Tag="2"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- バックグラウンドシャドウレゾリューション -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="背景の影の解像度"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Background Shadow Resolution"/>
                                <ComboBox x:Name="BackgroundShadowResolutionComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Low"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Medium"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="High"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="Very High"
                                                  Tag="3"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- ウィンドウサイズ設定 -->
                            <GroupBox Header="キャラクターサイズ"
                                      Margin="0,15,0,0"
                                      Padding="10"
                                      ToolTip="Character size">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Slider x:Name="WindowSizeSlider"
                                            Minimum="100"
                                            Maximum="4000"
                                            Value="650"
                                            TickFrequency="100"
                                            TickPlacement="BottomRight"
                                            Margin="0,5"
                                            Grid.Row="0"/>

                                    <TextBlock Grid.Row="1"
                                               Margin="0,5">
                                        <Run Text="サイズ: "/>
                                        <Run Text="{Binding ElementName=WindowSizeSlider, Path=Value, StringFormat='{}{0:0}'}"/>
                                    </TextBlock>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Character"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Character setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- キャラクター選択 -->
                            <GroupBox Header="キャラクター選択"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Select Character (Restart Required)">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="85"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox x:Name="CharacterSelectComboBox"
                                              Grid.Column="0"
                                              Margin="0,5,10,5"
                                              SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                              Foreground="#FF4873CF">
                                    </ComboBox>

                                    <Button x:Name="AddCharacterButton"
                                            Grid.Column="1"
                                            Content="追加"
                                            Margin="0,5,0,5"
                                            Padding="10,5"
                                            Click="AddCharacterButton_Click"
                                            Foreground="#FF4873CF"
                                            ToolTip="Add character"/>

                                    <Button x:Name="DeleteCharacterButton"
                                            Grid.Column="2"
                                            Content="削除"
                                            Margin="5,5,0,5"
                                            Padding="10,5"
                                            Background="#d32f2f"
                                            Foreground="WhiteSmoke"
                                            Click="DeleteCharacterButton_Click"
                                            ToolTip="Delete this character"/>
                                </Grid>
                            </GroupBox>

                            <!-- 基本設定 -->
                            <GroupBox Header="基本設定"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Basic setting">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="名前:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Name"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="CharacterNameTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"/>
                                    </Grid>

                                    <!-- VRMFilePathの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="VRMファイル:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="VRMFilePathTextBox"
                                                 Margin="0,5,5,5"
                                                 Foreground="#FF0078D7"
                                                 IsReadOnly="True"/>
                                        <Button Grid.Column="2"
                                                x:Name="BrowseVrmFileButton"
                                                Content="開く..."
                                                Padding="10,0"
                                                Click="BrowseVrmFileButton_Click"
                                                ToolTip="Open..."
                                                VerticalAlignment="Center"
                                                Foreground="#FF4873CF"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- マテリアル・影設定 -->
                            <GroupBox Header="マテリアル・影設定"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- MToon変換設定 -->
                                    <CheckBox x:Name="ConvertMToonCheckBox"
                                              Content="UnlitをMToonに変換する"
                                              Margin="0,5,0,10"
                                              Foreground="#FF4873CF"
                                              ToolTip="Convert Unlit to MToon"/>

                                    <!-- 影オフメッシュ設定 -->
                                    <CheckBox x:Name="EnableShadowOffCheckBox"
                                              Content="指定したメッシュに影を落とさない"
                                              Margin="0,5,0,5"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable shadow off mesh"
                                              Checked="EnableShadowOffCheckBox_Checked"
                                              Unchecked="EnableShadowOffCheckBox_Unchecked"/>

                                    <!-- 影オフメッシュ名設定 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="メッシュ名:"
                                                   VerticalAlignment="Center"
                                                   Margin="20,0,0,0"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="ShadowOffMeshTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="カンマ区切りでメッシュ名を入力 (例: Face, U_Char_1)"/>
                                    </Grid>
                                    <!-- 影設定説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        顔など特定のメッシュに影を落としたくない場合に使用します
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>

                            <!-- LLMパラメータ -->
                            <GroupBox Header="言語生成AI"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel Margin="1,0,0,0">

                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseLLMCheckBox"
                                                  Content="LLMを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use LLM"/>
                                    </Grid>

                                    <!-- APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="API Key:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="ApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     PasswordChar="●"
                                                     Foreground="#FF4873CF"
                                                     ToolTip="Enter your API key"/>
                                    </Grid>

                                    <!-- LLMモデルの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="LLM Model:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="LlmModelTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>
                                    <!-- LLM説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        <TextBlock.Inlines>
                                            <Run Text="LiteLLM の書式で記載してください"/>
                                            <LineBreak/>
                                            <Run Text="ex) openai/gpt-4o-mini, gemini/gemini-2.0-flash, ollama_chat/gemma3:12b"/>
                                            <LineBreak/>
                                            <Run Text="詳細は "/>
                                            <Hyperlink NavigateUri="https://docs.litellm.ai/docs/providers"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="https://docs.litellm.ai/docs/providers"/>
                                            </Hyperlink>
                                            <Run Text=" を参照してください"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>


                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Prompt:"
                                                   VerticalAlignment="Top"
                                                   ToolTip="Prompt"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="SystemPromptTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Height="100"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- 記憶機能 -->
                            <GroupBox Header="長期記憶"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel Margin="1,0,0,0">
                                    <!-- 記憶機能の有効/無効設定 -->
                                    <Grid Margin="0,10,0,5">
                                        <CheckBox x:Name="IsEnableMemoryCheckBox"
                                                  Content="記憶を保持する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Enable memory"/>
                                    </Grid>

                                    <!-- ユーザーIDの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Memory ID:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="UserIdTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>
                                    <!-- ユーザーID説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        長期記憶を保存する時にキャラクターとあなたを紐づけるIDです。変更すると別人と認識されます。
                                    </TextBlock>

                                    <!-- 埋め込みモデル設定 -->
                                    <Grid Margin="0,10,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="API Key:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="API Key"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="EmbeddedApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     Foreground="#FF0078D7"/>
                                    </Grid>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="埋め込みモデル:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Embedded Model"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="EmbeddedModelTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <!-- 埋め込みモデル説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        <TextBlock.Inlines>
                                            <Run Text="長期記憶をベクトル化するための埋め込みモデルを設定します。LiteLLM の書式で記載してください。"/>
                                            <LineBreak/>
                                            <Run Text="ex) openai/text-embedding-3-large（推奨）, openai/text-embedding-3-small, gemini/text-embedding-004"/>
                                            <LineBreak/>
                                            <Run Text="※1536次元のモデルに最適化されています"/>
                                            <LineBreak/>
                                            <Run Text="詳細は "/>
                                            <Hyperlink NavigateUri="https://docs.litellm.ai/docs/embedding/supported_embedding"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="https://docs.litellm.ai/docs/embedding/supported_embedding"/>
                                            </Hyperlink>
                                            <Run Text=" を参照してください"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>

                            <!-- TTSパラメータ -->
                            <GroupBox Header="音声合成 (VOICEVOX/SHAREVOX/AivisSpeech)"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseTTSCheckBox"
                                                  Content="TTSを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use TTS"/>
                                    </Grid>

                                    <!-- エンドポイントURLの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Endpoint URL:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="TTSEndpointURLTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <!-- スピーカーIDの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Sperker ID:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="TTSSperkerIDTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- STTパラメータ -->
                            <GroupBox Header="音声認識 (AmiVoice/Whisper)"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseSTTCheckBox"
                                                  Content="STTを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use STT"/>
                                    </Grid>

                                    <!-- STTエンジンの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="エンジン:"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1"
                                                  x:Name="STTEngineComboBox"
                                                  Margin="0,5"
                                                  Foreground="#FF4873CF">
                                            <ComboBoxItem Content="AmiVoice"
                                                          Tag="amivoice"/>
                                            <ComboBoxItem Content="Whisper(OpenAI)"
                                                          Tag="openai"/>
                                        </ComboBox>
                                    </Grid>

                                    <!-- STT起動ワードの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Wake Word:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="STTWakeWordTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="Wake word for STT"/>
                                    </Grid>
                                    <!-- STT起動ワード説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        音声認識を開始するキーワードです。起動直後は反応が遅くなることがあります。
                                    </TextBlock>

                                    <!-- STT APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="STT API Key:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="STTApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     Foreground="#FF0078D7"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Animation"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Animation setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Animation set グループボックス -->
                            <GroupBox Header="Animation set"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox Grid.Column="0"
                                              x:Name="AnimationSetComboBox"
                                              Margin="0,5,10,5"
                                              Foreground="#FF4873CF"
                                              IsEditable="True"
                                              DisplayMemberPath="animeSetName"
                                              SelectedValuePath="animeSetName"/>

                                    <Button Grid.Column="1"
                                            x:Name="AddAnimationSetButton"
                                            Content="追加"
                                            Margin="0,5,5,5"
                                            Padding="10,5"
                                            Foreground="#FF4873CF"
                                            Click="AddAnimationSetButton_Click"/>

                                    <Button Grid.Column="2"
                                            x:Name="DeleteAnimationSetButton"
                                            Content="削除"
                                            Margin="0,5,0,5"
                                            Padding="10,5"
                                            Background="#d32f2f"
                                            Foreground="WhiteSmoke"
                                            Click="DeleteAnimationSetButton_Click"/>
                                </Grid>
                            </GroupBox>

                            <!-- 姿勢変更ループ回数設定 -->
                            <GroupBox Header="姿勢変更ループ回数設定"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="立ち姿勢:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <TextBox Grid.Column="1"
                                                 x:Name="PostureChangeLoopCountStandingTextBox"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FF4873CF"
                                                 TextChanged="PostureChangeLoopCountStandingTextBox_TextChanged"
                                                 ToolTip="立ち姿勢の変更ループ回数を設定します"/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="座り姿勢:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <TextBox Grid.Column="1"
                                                 x:Name="PostureChangeLoopCountSittingFloorTextBox"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FF4873CF"
                                                 TextChanged="PostureChangeLoopCountSittingFloorTextBox_TextChanged"
                                                 ToolTip="座り姿勢の変更ループ回数を設定します"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- アニメーションリスト -->
                            <StackPanel x:Name="AnimationListPanel"
                                        Margin="0,0,20,0">
                                <!-- アニメーション項目がここに動的に追加されます -->
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="System"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="System setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- 通知API設定 -->
                            <GroupBox Header="通知API"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- 説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="#666666"
                                               Margin="0,0,0,10">
                                        REST APIで受信した通知をキャラクターが教えてくれます
                                    </TextBlock>

                                    <!-- 通知要求を受けるチェックボックス -->
                                    <CheckBox x:Name="IsEnableNotificationApiCheckBox"
                                              Content="通知要求を受ける"
                                              Margin="0,5,0,15"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable notification API"/>
                                    <!-- API説明 -->
                                    <TextBox x:Name="ApiDescriptionTextBox"
                                             IsReadOnly="True"
                                             BorderThickness="0"
                                             VerticalScrollBarVisibility="Auto"
                                             Foreground="#FF4873CF"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- デスクトップウォッチ設定 -->
                            <GroupBox Header="デスクトップウォッチ"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- 説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="#666666"
                                               Margin="0,0,0,10">
                                        デスクトップの画面を定期的に取得し、内容に応じたコメントをします。マルチモーダルモデルが必要です。
                                    </TextBlock>

                                    <!-- ウォッチ機能の有効/無効設定 -->
                                    <CheckBox x:Name="ScreenshotEnabledCheckBox"
                                              Content="デスクトップウォッチを有効にする（LLMに画像を送信します）"
                                              Margin="0,5,0,5"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable desktop monitoring"/>

                                    <!-- アクティブウィンドウのみ設定 -->
                                    <CheckBox x:Name="CaptureActiveWindowOnlyCheckBox"
                                              Content="アクティブウィンドウだけを対象にする"
                                              Margin="0,10,0,5"
                                              Foreground="#FF4873CF"
                                              ToolTip="Capture active window only"/>

                                    <!-- ウォッチ間隔設定 -->
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="ウォッチ間隔:"
                                                   VerticalAlignment="Center"
                                                   Height="19"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="ScreenshotIntervalTextBox"
                                                 Foreground="#FF0078D7"
                                                 VerticalAlignment="Center"
                                                 Width="50"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="分"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"/>
                                    </Grid>

                                    <!-- 文字列フィルタリング設定 -->
                                    <CheckBox x:Name="RegularExpressionFilteringCheckBox"
                                              Content="OCRによる文字列フィルタリング（画像をOCRして正規表現に一致したら画像を送信しません）"
                                              Margin="0,10,0,0"
                                              Foreground="#FF4873CF"/>

                                    <!-- 正規表現設定 -->
                                    <Grid Margin="20,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="65"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="正規表現:"
                                                   VerticalAlignment="Center"
                                                   Height="19"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="RegularExpressionString"
                                                 Foreground="#FF0078D7"
                                                 VerticalAlignment="Center"
                                                 Width="400"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0,10,0"/>
                                    </Grid>

                                    <!-- フィルタリング説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="20,0,0,10">
                                        <TextBlock TextWrapping="Wrap"
                                                   Margin="0,0,0,5">
                                            <TextBlock.Inlines>
                                                <Run Text="セキュリティやBAN対策で実装しましたが、精度が低いので気休め程度に考えてください。"/>
                                                <LineBreak/>
                                                <Run Text="正しく認識できない事があるため、似た文字も対象にしてください。"/>
                                            </TextBlock.Inlines>
                                        </TextBlock>
                                    </TextBlock>


                                    <!-- アイドルタイムアウト設定 -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="アイドルタイムアウト:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="IdleTimeoutTextBox"
                                                 Foreground="#FF0078D7"
                                                 VerticalAlignment="Center"
                                                 Width="50"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="分"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"/>
                                    </Grid>

                                    <!-- アイドルタイムアウト説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="0,0,0,10"
                                               Foreground="#FF4873CF">
                                        ※マウスやキーボードの操作がない時間が設定値を超えると、デスクトップウォッチを一時停止します。
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="License"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="License">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="5">
                        <TextBox Grid.Column="1"
                                 x:Name="LicenseTextBox"
                                 Foreground="#FF0078D7"
                                 Padding="5"
                                 BorderThickness="0"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Background="Transparent"
                                 VerticalContentAlignment="Top"
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 共通OK/キャンセルボタンエリア -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton"
                        Content="OK"
                        Width="80"
                        Height="30"
                        Margin="0,0,10,0"
                        Background="#4873CF"
                        Foreground="WhiteSmoke"
                        Click="OkButton_Click"/>
                <Button x:Name="CancelButton"
                        Content="キャンセル"
                        Width="80"
                        Height="30"
                        Click="CancelButton_Click"
                        Foreground="#FF4873CF"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>