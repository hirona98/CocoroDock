<Window x:Class="CocoroDock.Controls.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocoroDock.Controls"
        xmlns:converters="clr-namespace:CocoroDock.Converters"
        mc:Ignorable="d"
        Title="設定"
        Height="800"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- タブスタイル -->
        <Style x:Key="AdminTabItemStyle"
               TargetType="TabItem">
            <Setter Property="Background"
                    Value="#F0F0F0"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#666666"/>
            <Setter Property="Margin"
                    Value="0,0,2,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="White"/>
                    <Setter Property="Foreground"
                            Value="#4873CF"/>
                    <Setter Property="BorderThickness"
                            Value="0,0,0,3"/>
                    <Setter Property="BorderBrush"
                            Value="#4873CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ボタンスタイル（無効状態対応） -->
        <Style x:Key="DisabledButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#4873CF"/>
            <Setter Property="Foreground"
                    Value="WhiteSmoke"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Background"
                                        Value="#CCCCCC"/>
                                <Setter Property="Foreground"
                                        Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#5A84D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3A62B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 変換器 -->
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:AnimationTypeConverter x:Key="AnimationTypeConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="AdminTabControl"
                    BorderThickness="0"
                    Background="White"
                    Grid.Row="0">

            <TabItem Header="Display"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Display Setting">
                <local:DisplaySettingsControl x:Name="DisplaySettingsControl"/>
            </TabItem>

            <TabItem Header="Character"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Character setting">
                <Grid Margin="20,20,0,20">
                    <local:CharacterManagementControl x:Name="CharacterManagementControl"/>
                </Grid>
            </TabItem>

            <TabItem Header="Memory"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Memory setting">
                <Grid Margin="20,20,0,20">
                    <local:MemorySettingsControl x:Name="MemorySettingsControl"/>
                </Grid>
            </TabItem>

            <TabItem Header="Animation"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Animation setting">
                <Grid Margin="20,20,0,20">
                    <local:AnimationSettingsControl x:Name="AnimationSettingsControl"/>
                </Grid>
            </TabItem>

            <TabItem Header="System"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="System setting">
                <Grid Margin="20,20,0,20">
                    <local:SystemSettingsControl x:Name="SystemSettingsControl"/>
                </Grid>
            </TabItem>

            <TabItem Header="Web/API"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Web and API settings">
                <Grid Margin="20,20,0,20">
                    <local:ExternalServicesSettingsControl x:Name="ExternalServicesSettingsControl"/>
                </Grid>
            </TabItem>
            <!-- TODO: MCP未実装 -->
            <TabItem Header="MCP（未実装）"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Model Context Protocol">
                <Grid Margin="20,20,0,20">
                    <local:McpSettingsControl x:Name="McpSettingsControl"/>
                </Grid>
            </TabItem>

            <TabItem Header="License"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="License">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="5">
                        <TextBox Grid.Column="1"
                                 x:Name="LicenseTextBox"
                                 Foreground="#FF0078D7"
                                 Padding="5"
                                 BorderThickness="0"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Background="Transparent"
                                 VerticalContentAlignment="Top"
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 共通OK/キャンセルボタンエリア -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左側：ログ表示ボタン -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button x:Name="LogViewerButton"
                            Content="ログ表示"
                            Width="100"
                            Height="30"
                            Click="LogViewerButton_Click"
                            ToolTip="デバッグログウィンドウを開きます"/>
                </StackPanel>

                <!-- 右側：OK/キャンセル/適用ボタン -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="OkButton"
                            Content="OK"
                            Width="80"
                            Height="30"
                            Margin="0,0,10,0"
                            Style="{StaticResource DisabledButtonStyle}"
                            Click="OkButton_Click"/>
                    <Button x:Name="CancelButton"
                            Content="キャンセル"
                            Width="80"
                            Height="30"
                            Margin="0,0,10,0"
                            Style="{StaticResource DisabledButtonStyle}"
                            Click="CancelButton_Click"/>
                    <Button x:Name="ApplyButton"
                            Content="適用"
                            Width="80"
                            Height="30"
                            Style="{StaticResource DisabledButtonStyle}"
                            Click="ApplyButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>