                                        <TextBlock Grid.Column="0"
                                                   Text="Sperker ID:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="TTSSperkerIDTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
