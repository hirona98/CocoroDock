                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseSTTCheckBox"
                                                  Content="STTを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use STT"/>
                                    </Grid>

                                    <!-- STTエンジンの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="エンジン:"
                                                   VerticalAlignment="Center"/>
