                                    <!-- STT起動ワード説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        音声認識を開始するキーワードです。複数設定する場合はカンマ区切りで入力してください（例: こんにちは, ハロー, ミク）。起動直後は反応が遅くなることがあります。
                                    </TextBlock>

                                    <!-- STT APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="STT API Key:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="STTApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     Foreground="#FF0078D7"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Animation"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Animation setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Animation set グループボックス -->
                            <GroupBox Header="Animation set"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox Grid.Column="0"
                                              x:Name="AnimationSetComboBox"
                                              Margin="0,5,10,5"
                                              Foreground="#FF4873CF"
                                              IsEditable="True"
                                              DisplayMemberPath="animeSetName"
                                              SelectedValuePath="animeSetName"/>

                                    <Button Grid.Column="1"
                                            x:Name="AddAnimationSetButton"
                                            Content="追加"
                                            Margin="0,5,5,5"
                                            Padding="10,5"
                                            Foreground="#FF4873CF"
                                            Click="AddAnimationSetButton_Click"/>

                                    <Button Grid.Column="2"
                                            x:Name="DeleteAnimationSetButton"
                                            Content="削除"
                                            Margin="0,5,0,5"
                                            Padding="10,5"
                                            Background="#d32f2f"
                                            Foreground="WhiteSmoke"
                                            Click="DeleteAnimationSetButton_Click"/>
                                </Grid>
                            </GroupBox>

                            <!-- 姿勢変更ループ回数設定 -->
                            <GroupBox Header="姿勢変更ループ回数設定"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="立ち姿勢:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <TextBox Grid.Column="1"
                                                 x:Name="PostureChangeLoopCountStandingTextBox"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FF4873CF"
                                                 TextChanged="PostureChangeLoopCountStandingTextBox_TextChanged"
                                                 ToolTip="立ち姿勢の変更ループ回数を設定します"/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="座り姿勢:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <TextBox Grid.Column="1"
                                                 x:Name="PostureChangeLoopCountSittingFloorTextBox"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FF4873CF"
                                                 TextChanged="PostureChangeLoopCountSittingFloorTextBox_TextChanged"
                                                 ToolTip="座り姿勢の変更ループ回数を設定します"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- アニメーションリスト -->
                            <StackPanel x:Name="AnimationListPanel"
                                        Margin="0,0,20,0">
                                <!-- アニメーション項目がここに動的に追加されます -->
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="System"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="System setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- 通知API設定 -->
                            <GroupBox Header="通知API"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- 説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="#666666"
                                               Margin="0,0,0,10">
                                        REST APIで受信した通知をキャラクターが教えてくれます
                                    </TextBlock>

                                    <!-- 通知要求を受けるチェックボックス -->
                                    <CheckBox x:Name="IsEnableNotificationApiCheckBox"
                                              Content="通知要求を受ける"
                                              Margin="0,5,0,15"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable notification API"/>
                                    <!-- API説明 -->
                                    <TextBox x:Name="ApiDescriptionTextBox"
                                             IsReadOnly="True"
                                             BorderThickness="0"
                                             VerticalScrollBarVisibility="Auto"
                                             Foreground="#FF4873CF"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- デスクトップウォッチ設定 -->
                            <GroupBox Header="デスクトップウォッチ"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- 説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="#666666"
                                               Margin="0,0,0,10">
                                        デスクトップの画面を定期的に取得し、内容に応じたコメントをします。マルチモーダルモデルが必要です。
                                    </TextBlock>

                                    <!-- ウォッチ機能の有効/無効設定 -->
                                    <CheckBox x:Name="ScreenshotEnabledCheckBox"
                                              Content="デスクトップウォッチを有効にする（LLMに画像を送信します）"
                                              Margin="0,5,0,5"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable desktop monitoring"/>

                                    <!-- アクティブウィンドウのみ設定 -->
                                    <CheckBox x:Name="CaptureActiveWindowOnlyCheckBox"
                                              Content="アクティブウィンドウだけを対象にする"
                                              Margin="0,10,0,5"
                                              Foreground="#FF4873CF"
                                              ToolTip="Capture active window only"/>

                                    <!-- ウォッチ間隔設定 -->
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="ウォッチ間隔:"
                                                   VerticalAlignment="Center"
                                                   Height="19"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="ScreenshotIntervalTextBox"
                                                 Foreground="#FF0078D7"
                                                 VerticalAlignment="Center"
                                                 Width="50"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="分"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"/>
                                    </Grid>

                                    <!-- アイドルタイムアウト設定 -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="アイドルタイムアウト:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="IdleTimeoutTextBox"
                                                 Foreground="#FF0078D7"
                                                 VerticalAlignment="Center"
                                                 Width="50"
                                                 HorizontalAlignment="Left"
                                                 Margin="10,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="分"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"/>
                                    </Grid>

                                    <!-- アイドルタイムアウト説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="0,0,0,10"
                                               Foreground="#FF4873CF">
                                        ※マウスやキーボードの操作がない時間が設定値を超えると、デスクトップウォッチを一時停止します。
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>

                            <!-- マイク設定 -->
                            <GroupBox Header="マイク設定"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- 説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="#666666"
                                               Margin="0,0,0,10">
                                        音声認識時のマイク入力感度を調整します。STTが有効なキャラクターに適用されます。
                                    </TextBlock>

                                    <!-- 自動調節設定 -->
                                    <CheckBox x:Name="MicAutoAdjustmentCheckBox"
                                              Content="マイクしきい値の自動調節を有効にする"
                                              Margin="0,5,0,15"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable microphone threshold auto adjustment"/>

                                    <!-- 手動しきい値設定 -->
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="入力しきい値（手動）:"
                                                   VerticalAlignment="Center"/>
                                        <Slider Grid.Column="1"
                                                x:Name="MicThresholdSlider"
                                                Minimum="-50"
                                                Maximum="0"
                                                Value="-45"
                                                TickFrequency="10"
                                                TickPlacement="BottomRight"
                                                Margin="10,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ElementName=MicThresholdSlider, Path=Value, StringFormat='{}{0:0} dB'}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>

                                    <!-- しきい値説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="0,0,0,10"
                                               Foreground="#FF4873CF">
                                        ※値が低いほど（-50dBに近いほど）音声を拾いやすくなりますが、環境音も拾いやすくなります。自動調節時は無効です。
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="MCP"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Model Context Protocol">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,0,20,27">

                            <!-- MCP有効/無効トグル -->
                            <CheckBox
                                x:Name="McpEnabledCheckBox"
                                Content="MCPを有効にする"
                                Foreground="#FF0078D7"
                                FontSize="14"
                                Margin="0,0,0,10"/>

                            <!-- 接続状態表示 -->
                            <GroupBox
                                Header="接続状態"
                                Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- ステータスメッセージ -->
                                    <TextBlock Grid.Row="0"
                                               x:Name="McpStatusMessage"
                                               Margin="10,5"
                                               FontSize="12"/>

                                    <!-- MCPサーバー一覧 -->
                                    <ItemsControl Grid.Row="1"
                                                  x:Name="McpServersList"
                                                  Margin="10,5">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="5"
                                                        Margin="0,2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding Name}"
                                                                   FontWeight="Normal"/>

                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding Status}"
                                                                   FontSize="11"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- ツール登録ログ -->
                                    <Border Grid.Row="2"
                                            BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            Margin="10,5">
                                        <TextBox x:Name="DiagnosticDetailsTextBox"
                                                 Foreground="#FF0078D7"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto"
                                                 FontFamily="Consolas"
                                                 FontSize="11"
                                                 Padding="8"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 IsReadOnly="True"
                                                 MinHeight="120"
                                                 Height="200"/>
                                    </Border>

                                </Grid>
                            </GroupBox>

                            <!-- MCP設定ファイル編集 -->
                            <GroupBox Header="MCP設定編集 (CocoroAiMcp.json)"
                                      Margin="0,0,0,10">
                                <Grid Margin="10,10,0,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            Height="300"
                                            Margin="0,0,10,0">
                                        <TextBox x:Name="McpConfigTextBox"
                                                 AcceptsReturn="True"
                                                 TextWrapping="NoWrap"
                                                 VerticalScrollBarVisibility="Auto"
                                                 HorizontalScrollBarVisibility="Auto"
                                                 FontFamily="Consolas"
                                                 FontSize="12"
                                                 Padding="10"
                                                 BorderThickness="0"
                                                 Background="Transparent"/>
                                    </Border>
                                </Grid>
                            </GroupBox>

                            <!-- ボタンエリア -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,10,0,0">
                                <Button x:Name="SaveMcpConfigButton"
                                        Content="設定を保存して再読み込み"
                                        Width="180"
                                        Height="30"
                                        Style="{StaticResource DisabledButtonStyle}"
                                        Command="{Binding SaveConfigCommand}"/>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="License"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="License">
