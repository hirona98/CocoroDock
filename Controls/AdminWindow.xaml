<Window x:Class="CocoroDock.Controls.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocoroDock.Controls"
        xmlns:converters="clr-namespace:CocoroDock.Converters"
        mc:Ignorable="d"
        Title="設定"
        Height="800"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- タブスタイル -->
        <Style x:Key="AdminTabItemStyle"
               TargetType="TabItem">
            <Setter Property="Background"
                    Value="#F0F0F0"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#666666"/>
            <Setter Property="Margin"
                    Value="0,0,2,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="White"/>
                    <Setter Property="Foreground"
                            Value="#4873CF"/>
                    <Setter Property="BorderThickness"
                            Value="0,0,0,3"/>
                    <Setter Property="BorderBrush"
                            Value="#4873CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 変換器 -->
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:AnimationTypeConverter x:Key="AnimationTypeConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="AdminTabControl"
                    BorderThickness="0"
                    Background="White"
                    Grid.Row="0">

            <TabItem Header="Display"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Display Setting">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <CheckBox x:Name="TopMostCheckBox"
                                      Content="最前面に表示"
                                      Margin="0,5,0,10"
                                      Foreground="#FF4873CF"
                                      ToolTip="Always on top"/>
                            <CheckBox x:Name="EscapeCursorCheckBox"
                                      Content="カーソルから逃げる（Shiftキー押下中は無効）"
                                      Margin="0,5,0,10"
                                      ToolTip="Escape cursor (Disabled while holding down the Shift key)"
                                      Foreground="#FF4873CF"/>

                            <Grid Margin="0,5,0,10"
                                  HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="InputVirtualKeyCheckBox"
                                          Grid.Column="0"
                                          Content="右ドラッグで触ったときに仮想キー入力する"
                                          ToolTip="Enter virtual keys when touching with right drag"
                                          Foreground="#FF4873CF"
                                          VerticalAlignment="Center"/>
                                <TextBox x:Name="VirtualKeyStringTextBox"
                                         Grid.Column="1"
                                         Width="120"
                                         Margin="10,0,5,0"
                                         Foreground="#FF0078D7"
                                         IsReadOnly="True"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         Background="#FFDDDDDD"/>
                                <Button x:Name="CaptureKeyButton"
                                        Grid.Column="2"
                                        Content="Capture Key"
                                        Padding="10,0"
                                        Foreground="#FF4873CF"
                                        ToolTip="Capture key"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                            <CheckBox x:Name="AutoMoveCheckBox"
                                      Content="自動的に移動する（不安定です）"
                                      Margin="0,5,0,10"
                                      ToolTip="Auto move (unstable)"
                                      Foreground="#FF4873CF"/>
                            <CheckBox x:Name="AmbientOcclusionCheckBox"
                                      Content="Ambient Occlusion"
                                      Margin="0,5,0,10"
                                      ToolTip="Ambient Occlusion"
                                      Foreground="#FF4873CF"/>

                            <!-- アンチエイリアシング設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="アンチエイリアシング（MSAA）"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Anti-aliasing (MSAA)"/>
                                <ComboBox x:Name="MSAAComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="2x"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="4x"
                                                  Tag="4"/>
                                    <ComboBoxItem Content="8x"
                                                  Tag="8"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- キャラクターシャドウ設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="キャラクターの影"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Character Shadow"/>
                                <ComboBox x:Name="CharacterShadowComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Hard Shadow"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="Soft Shadow"
                                                  Tag="2"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- キャラクターシャドウレゾリューション -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="キャラクターの影の解像度"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Character Shadow Resolution"/>
                                <ComboBox x:Name="CharacterShadowResolutionComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Low"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Medium"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="High"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="Very High"
                                                  Tag="3"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- バックグラウンドシャドウ設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="背景の影"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Background Shadow"/>
                                <ComboBox x:Name="BackgroundShadowComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Hard Shadow"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="Soft Shadow"
                                                  Tag="2"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- バックグラウンドシャドウレゾリューション -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="背景の影の解像度"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Background Shadow Resolution"/>
                                <ComboBox x:Name="BackgroundShadowResolutionComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Low"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Medium"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="High"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="Very High"
                                                  Tag="3"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- ウィンドウサイズ設定 -->
                            <GroupBox Header="キャラクターサイズ"
                                      Margin="0,10,0,0"
                                      Padding="10"
                                      ToolTip="Character size">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Slider x:Name="WindowSizeSlider"
                                            Minimum="100"
                                            Maximum="4000"
                                            Value="650"
                                            TickFrequency="100"
                                            TickPlacement="BottomRight"
                                            Margin="0,5"
                                            Grid.Row="0"/>

                                    <TextBlock Grid.Row="1"
                                               Margin="0,5">
                                        <Run Text="サイズ: "/>
                                        <Run Text="{Binding ElementName=WindowSizeSlider, Path=Value, StringFormat='{}{0:0}'}"/>
                                    </TextBlock>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Character"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Character setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- キャラクター選択 -->
                            <GroupBox Header="キャラクター選択"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Select Character (Restart Required)">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox x:Name="CharacterSelectComboBox"
                                              Grid.Column="0"
                                              Margin="0,5,10,5"
                                              SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                              Foreground="#FF4873CF">
                                    </ComboBox>

                                    <Button x:Name="AddCharacterButton"
                                            Grid.Column="1"
                                            Content="キャラクターを追加"
                                            Margin="0,5,0,5"
                                            Padding="10,5"
                                            Click="AddCharacterButton_Click"
                                            Foreground="#FF4873CF"
                                            ToolTip="Add character"/>
                                </Grid>
                            </GroupBox>

                            <!-- 基本設定 -->
                            <GroupBox Header="基本設定"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Basic setting">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="名前:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Name"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="CharacterNameTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"/>
                                    </Grid>

                                    <!-- VRMFilePathの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="VRMファイル:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="VRMFilePathTextBox"
                                                 Margin="0,5,5,5"
                                                 Foreground="#FF0078D7"
                                                 IsReadOnly="True"/>
                                        <Button Grid.Column="2"
                                                x:Name="BrowseVrmFileButton"
                                                Content="開く..."
                                                Padding="10,0"
                                                Click="BrowseVrmFileButton_Click"
                                                ToolTip="Open..."
                                                VerticalAlignment="Center"
                                                Foreground="#FF4873CF"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                            <!-- LLMパラメータ -->
                            <GroupBox Header="LLM"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel Margin="1,0,0,0">

                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseLLMCheckBox"
                                                  Content="LLMを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use LLM"/>
                                    </Grid>

                                    <!-- APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="API Key:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="ApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     PasswordChar="●"
                                                     Foreground="#FF4873CF"
                                                     ToolTip="Enter your API key"/>
                                    </Grid>

                                    <!-- LLMモデルの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="LLM Model:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="LlmModelTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>
                                    <!-- LLM説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        <TextBlock.Inlines>
                                            <Run Text="LiteLLM の書式で記載してください"/>
                                            <LineBreak/>
                                            <Run Text="ex) openai/gpt-4o-mini, gemini/gemini-2.0-flash, ollama/mistral"/>
                                            <LineBreak/>
                                            <Run Text="詳細は "/>
                                            <Hyperlink NavigateUri="https://docs.litellm.ai/docs/providers"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="https://docs.litellm.ai/docs/providers"/>
                                            </Hyperlink>
                                            <Run Text=" を参照してください"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>


                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Prompt:"
                                                   VerticalAlignment="Top"
                                                   ToolTip="Prompt"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="SystemPromptTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Height="100"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- 記憶機能 -->
                            <GroupBox Header="Memory"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel Margin="1,0,0,0">
                                    <!-- 記憶機能の有効/無効設定 -->
                                    <Grid Margin="0,10,0,5">
                                        <CheckBox x:Name="IsEnableMemoryCheckBox"
                                                  Content="記憶を保持する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Enable memory"/>
                                    </Grid>

                                    <!-- ユーザーIDの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Memory ID:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="UserIdTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>
                                    <!-- ユーザーID説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        長期記憶を保存する時にキャラクターとあなたを紐づけるIDです。変更すると別人と認識されます。
                                    </TextBlock>

                                    <!-- 埋め込みモデル設定 -->
                                    <Grid Margin="0,10,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="API Key:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="API Key"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="EmbeddedApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     Foreground="#FF0078D7"/>
                                    </Grid>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="埋め込みモデル:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Embedded Model"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="EmbeddedModelTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <!-- 埋め込みモデル説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        <TextBlock.Inlines>
                                            <Run Text="長期記憶をベクトル化するための埋め込みモデルを設定します。LiteLLM の書式で記載してください"/>
                                            <LineBreak/>
                                            <Run Text="ex) openai/text-embedding-3-small, gemini/text-embedding-004, ollama/nomic-embed-text"/>
                                            <LineBreak/>
                                            <Run Text="詳細は "/>
                                            <Hyperlink NavigateUri="https://docs.litellm.ai/docs/embedding/supported_embedding"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="https://docs.litellm.ai/docs/embedding/supported_embedding"/>
                                            </Hyperlink>
                                            <Run Text=" を参照してください"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>

                            <!-- TTSパラメータ -->
                            <GroupBox Header="TTS (VOICEVOX/SHAREVOX/AivisSpeech)"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseTTSCheckBox"
                                                  Content="TTSを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use TTS"/>
                                    </Grid>

                                    <!-- エンドポイントURLの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Endpoint URL:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="TTSEndpointURLTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <!-- スピーカーIDの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Sperker ID:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="TTSSperkerIDTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- STTパラメータ -->
                            <GroupBox Header="STT (Speech-to-Text)"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseSTTCheckBox"
                                                  Content="STTを使用する (OpenAI Only)"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use STT"/>
                                    </Grid>

                                    <!-- STT起動ワードの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Wake Word:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="STTWakeWordTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="Wake word for STT"/>
                                    </Grid>
                                    <!-- STT起動ワード説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        音声認識を開始するキーワードです。起動直後は反応が遅くなることがあります。
                                    </TextBlock>

                                    <!-- STT APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="STT API Key:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="STTApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     Foreground="#FF0078D7"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <Button x:Name="DeleteCharacterButton"
                                    Content="このキャラクターを削除"
                                    Padding="15,5"
                                    Background="#d32f2f"
                                    Foreground="WhiteSmoke"
                                    Click="DeleteCharacterButton_Click"
                                    HorizontalAlignment="Left"
                                    Margin="0,10,0,0"
                                    ToolTip="Delete this character"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Animation"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Animation setting">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Animation set グループボックス -->
                    <GroupBox Grid.Row="1"
                              Header="Animation set"
                              Margin="0,0,0,10"
                              Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                      x:Name="AnimationSetComboBox"
                                      Margin="0,5,10,5"
                                      Foreground="#FF4873CF"
                                      DisplayMemberPath="animeSetName"
                                      SelectedValuePath="animeSetName"/>
                            
                            <Button Grid.Column="1"
                                    x:Name="AddAnimationSetButton"
                                    Content="セット追加"
                                    Margin="0,5,5,5"
                                    Padding="10,5"
                                    Foreground="#FF4873CF"
                                    Click="AddAnimationSetButton_Click"/>
                                    
                            <Button Grid.Column="2"
                                    x:Name="DeleteAnimationSetButton"
                                    Content="セット削除"
                                    Margin="0,5,0,5"
                                    Padding="10,5"
                                    Background="#d32f2f"
                                    Foreground="WhiteSmoke"
                                    Click="DeleteAnimationSetButton_Click"/>
                        </Grid>
                    </GroupBox>

                    <!-- Animation ON/OFF グループボックス -->
                    <GroupBox Grid.Row="2"
                              Header="Animation ON/OFF"
                              Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="AnimationListPanel">
                                <!-- アニメーション項目がここに動的に追加されます -->
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="License"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="License">
                <Grid Margin="20,20,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="5">
                        <TextBox Grid.Column="1"
                                 x:Name="LicenseTextBox"
                                 Foreground="#FF0078D7"
                                 Padding="5"
                                 BorderThickness="0"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Background="Transparent"
                                 VerticalContentAlignment="Top"
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 共通OK/キャンセルボタンエリア -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton"
                        Content="OK"
                        Width="80"
                        Height="30"
                        Margin="0,0,10,0"
                        Background="#4873CF"
                        Foreground="WhiteSmoke"
                        Click="OkButton_Click"/>
                <Button x:Name="CancelButton"
                        Content="キャンセル"
                        Width="80"
                        Height="30"
                        Click="CancelButton_Click"
                        Foreground="#FF4873CF"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>