<Window x:Class="CocoroDock.Controls.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocoroDock.Controls"
        xmlns:converters="clr-namespace:CocoroDock.Converters"
        mc:Ignorable="d"
        Title="設定"
        Height="800"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- タブスタイル -->
        <Style x:Key="AdminTabItemStyle"
               TargetType="TabItem">
            <Setter Property="Background"
                    Value="#F0F0F0"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#666666"/>
            <Setter Property="Margin"
                    Value="0,0,2,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="White"/>
                    <Setter Property="Foreground"
                            Value="#4873CF"/>
                    <Setter Property="BorderThickness"
                            Value="0,0,0,3"/>
                    <Setter Property="BorderBrush"
                            Value="#4873CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ボタンスタイル（無効状態対応） -->
        <Style x:Key="DisabledButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#4873CF"/>
            <Setter Property="Foreground"
                    Value="WhiteSmoke"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Background"
                                        Value="#CCCCCC"/>
                                <Setter Property="Foreground"
                                        Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#5A84D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3A62B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 変換器 -->
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:AnimationTypeConverter x:Key="AnimationTypeConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="AdminTabControl"
                    BorderThickness="0"
                    Background="White"
                    Grid.Row="0">

            <TabItem Header="Display"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Display Setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,0,20,0">
                            <Grid Margin="0,5,0,10"
                                  HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="RestoreWindowPositionCheckBox"
                                          Grid.Column="0"
                                          Content="起動時にキャラクター位置を復元する"
                                          Foreground="#FF4873CF"
                                          ToolTip="Restore window position on startup"
                                          VerticalAlignment="Center"/>
                                <Button x:Name="ResetCharacterPositionButton"
                                        Grid.Column="1"
                                        Content="位置リセット"
                                        Margin="10,0,0,0"
                                        Padding="8,2"
                                        Foreground="#FF4873CF"
                                        ToolTip="キャラクターの位置を初期位置にリセットします"
                                        VerticalAlignment="Center"
                                        Click="ResetCharacterPositionButton_Click"/>
                            </Grid>
                            <CheckBox x:Name="TopMostCheckBox"
                                      Content="最前面に表示"
                                      Margin="0,5,0,10"
                                      Foreground="#FF4873CF"
                                      ToolTip="Always on top"/>
                            <CheckBox x:Name="EscapeCursorCheckBox"
                                      Content="カーソルから逃げる（Shiftキー押下中は無効）"
                                      Margin="0,5,0,10"
                                      ToolTip="Escape cursor (Disabled while holding down the Shift key)"
                                      Foreground="#FF4873CF"/>

                            <!-- 逃げ先座標設定 -->
                            <GroupBox Header="逃げ先座標設定（最大10箇所）"
                                      Margin="15,5,0,15"
                                      Padding="10"
                                      ToolTip="Escape position settings">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 説明テキスト -->
                                    <TextBlock Grid.Row="0"
                                               TextWrapping="Wrap"
                                               Foreground="#666666"
                                               Margin="0,0,0,10">
                                        マウスに触れた時の逃げ先となる座標を最大10箇所まで設定できます。触れられた方向に移動します。
                                    </TextBlock>

                                    <!-- 座標リスト -->
                                    <Border Grid.Row="1"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            Background="White"
                                            MaxHeight="200">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled">
                                            <ItemsControl x:Name="EscapePositionsItemsControl"
                                                          ItemsSource="{Binding ElementName=EscapePositionsDataGrid, Path=ItemsSource}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="1"/>
                                                            </Grid.RowDefinitions>

                                                            <!-- アイテム内容 -->
                                                            <Grid Grid.Row="0"
                                                                    Margin="8">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="30"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="30"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- 有効/無効チェックボックス -->
                                                                <CheckBox Grid.Column="0"
                                                                          IsChecked="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}"
                                                                          VerticalAlignment="Center"/>

                                                                <!-- X座標ラベル -->
                                                                <TextBlock Grid.Column="1"
                                                                           Text="X:"
                                                                           VerticalAlignment="Center"
                                                                           Margin="8,0,0,0"/>

                                                                <!-- X座標入力 -->
                                                                <TextBox Grid.Column="2"
                                                                         Text="{Binding X, UpdateSourceTrigger=PropertyChanged}"
                                                                         BorderBrush="#CCCCCC"
                                                                         BorderThickness="1"
                                                                         Padding="4,2"
                                                                         Margin="4,0,8,0"
                                                                         VerticalAlignment="Center"/>

                                                                <!-- Y座標ラベル -->
                                                                <TextBlock Grid.Column="3"
                                                                           Text="Y:"
                                                                           VerticalAlignment="Center"/>

                                                                <!-- Y座標入力 -->
                                                                <TextBox Grid.Column="4"
                                                                         Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}"
                                                                         BorderBrush="#CCCCCC"
                                                                         BorderThickness="1"
                                                                         Padding="4,2"
                                                                         Margin="4,0,8,0"
                                                                         VerticalAlignment="Center"/>

                                                                <!-- 削除ボタン -->
                                                                <Button Grid.Column="5"
                                                                        Content="×"
                                                                        Width="20"
                                                                        Height="20"
                                                                        Background="#FF6B6B"
                                                                        Foreground="White"
                                                                        BorderThickness="0"
                                                                        FontSize="12"
                                                                        FontWeight="Bold"
                                                                        VerticalAlignment="Center"
                                                                        Click="RemoveEscapePosition_Click"
                                                                        Tag="{Binding}"
                                                                        ToolTip="この座標を削除">
                                                                    <Button.Style>
                                                                        <Style TargetType="Button">
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="Button">
                                                                                        <Border Background="{TemplateBinding Background}"
                                                                                                CornerRadius="10">
                                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                                              VerticalAlignment="Center"/>
                                                                                        </Border>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsMouseOver"
                                                                                                    Value="True">
                                                                                                <Setter Property="Background"
                                                                                                        Value="#FF5252"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                            </Grid>

                                                            <!-- 区切り線（最後の要素以外に表示） -->
                                                            <Rectangle Grid.Row="1"
                                                                       Fill="#E0E0E0"
                                                                       Height="1"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>

                                    <!-- 隠されたDataGrid（互換性のため） -->
                                    <DataGrid x:Name="EscapePositionsDataGrid"
                                              Visibility="Collapsed"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False">
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Header="有効"
                                                                    Binding="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}"/>
                                            <DataGridTextColumn Header="X座標"
                                                                Binding="{Binding X, UpdateSourceTrigger=PropertyChanged}"/>
                                            <DataGridTextColumn Header="Y座標"
                                                                Binding="{Binding Y, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- ボタンエリア -->
                                    <StackPanel Grid.Row="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                Margin="0,10,0,0">
                                        <Button x:Name="AddEscapePositionButton"
                                                Content="現在位置を追加"
                                                Padding="10,5"
                                                Margin="0,0,10,0"
                                                Foreground="#FF4873CF"
                                                ToolTip="現在のキャラクター位置を逃げ先に追加"
                                                Click="AddEscapePositionButton_Click"/>
                                        <Button x:Name="ClearEscapePositionsButton"
                                                Content="全削除"
                                                Padding="10,5"
                                                Background="#d32f2f"
                                                Foreground="WhiteSmoke"
                                                ToolTip="すべての逃げ先座標を削除"
                                                Click="ClearEscapePositionsButton_Click"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>

                            <Grid Margin="0,5,0,10"
                                  HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="InputVirtualKeyCheckBox"
                                          Grid.Column="0"
                                          Content="右ドラッグで触ったときに仮想キー入力する"
                                          ToolTip="Enter virtual keys when touching with right drag"
                                          Foreground="#FF4873CF"
                                          VerticalAlignment="Center"/>
                                <TextBox x:Name="VirtualKeyStringTextBox"
                                         Grid.Column="1"
                                         Width="120"
                                         Margin="10,0,5,0"
                                         Foreground="#FF0078D7"
                                         IsReadOnly="True"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         Background="#FFDDDDDD"/>
                                <Button x:Name="CaptureKeyButton"
                                        Grid.Column="2"
                                        Content="Capture Key"
                                        Padding="10,0"
                                        Foreground="#FF4873CF"
                                        ToolTip="Capture key"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                            <CheckBox x:Name="AutoMoveCheckBox"
                                      Content="何もない場所に自動移動する（不安定です）"
                                      Margin="0,5,0,10"
                                      ToolTip="Auto move (unstable)"
                                      Foreground="#FF4873CF"/>
                            <CheckBox x:Name="ShowMessageWindowCheckBox"
                                      Content="発話時メッセージウィンドウを表示する"
                                      Margin="0,5,0,10"
                                      ToolTip="Show message window on speech"
                                      Foreground="#FF4873CF"/>
                            <CheckBox x:Name="AmbientOcclusionCheckBox"
                                      Content="Ambient Occlusion"
                                      Margin="0,5,0,10"
                                      ToolTip="Ambient Occlusion"
                                      Foreground="#FF4873CF"/>

                            <!-- アンチエイリアシング設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="アンチエイリアシング（MSAA）"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Anti-aliasing (MSAA)"/>
                                <ComboBox x:Name="MSAAComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="2x"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="4x"
                                                  Tag="4"/>
                                    <ComboBoxItem Content="8x"
                                                  Tag="8"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- キャラクターシャドウ設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="キャラクターの影"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Character Shadow"/>
                                <ComboBox x:Name="CharacterShadowComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Hard Shadow"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="Soft Shadow"
                                                  Tag="2"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- キャラクターシャドウレゾリューション -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="キャラクターの影の解像度"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Character Shadow Resolution"/>
                                <ComboBox x:Name="CharacterShadowResolutionComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Low"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Medium"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="High"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="Very High"
                                                  Tag="3"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- バックグラウンドシャドウ設定 -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="背景の影"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Background Shadow"/>
                                <ComboBox x:Name="BackgroundShadowComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Disable"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Hard Shadow"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="Soft Shadow"
                                                  Tag="2"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- バックグラウンドシャドウレゾリューション -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5">
                                <TextBlock Text="背景の影の解像度"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"
                                           Width="200"
                                           ToolTip="Background Shadow Resolution"/>
                                <ComboBox x:Name="BackgroundShadowResolutionComboBox"
                                          Width="120"
                                          Foreground="#FF4873CF">
                                    <ComboBoxItem Content="Low"
                                                  Tag="0"/>
                                    <ComboBoxItem Content="Medium"
                                                  Tag="1"/>
                                    <ComboBoxItem Content="High"
                                                  Tag="2"/>
                                    <ComboBoxItem Content="Very High"
                                                  Tag="3"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- ウィンドウサイズ設定 -->
                            <GroupBox Header="キャラクターサイズ"
                                      Margin="0,15,0,0"
                                      Padding="10"
                                      ToolTip="Character size">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Slider x:Name="WindowSizeSlider"
                                            Minimum="100"
                                            Maximum="4000"
                                            Value="650"
                                            TickFrequency="100"
                                            TickPlacement="BottomRight"
                                            Margin="0,5"
                                            Grid.Row="0"/>

                                    <TextBlock Grid.Row="1"
                                               Margin="0,5">
                                        <Run Text="サイズ: "/>
                                        <Run Text="{Binding ElementName=WindowSizeSlider, Path=Value, StringFormat='{}{0:0}'}"/>
                                    </TextBlock>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Character"
                     Style="{StaticResource AdminTabItemStyle}"
                     ToolTip="Character setting">
                <Grid Margin="20,20,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- キャラクター選択 -->
                            <GroupBox Header="キャラクター選択"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Select Character (Restart Required)">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="85"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox x:Name="CharacterSelectComboBox"
                                              Grid.Column="0"
                                              Margin="0,5,10,5"
                                              SelectionChanged="CharacterSelectComboBox_SelectionChanged"
                                              Foreground="#FF4873CF">
                                    </ComboBox>

                                    <Button x:Name="AddCharacterButton"
                                            Grid.Column="1"
                                            Content="追加"
                                            Margin="0,5,0,5"
                                            Padding="10,5"
                                            Click="AddCharacterButton_Click"
                                            Foreground="#FF4873CF"
                                            ToolTip="Add character"/>

                                    <Button x:Name="DeleteCharacterButton"
                                            Grid.Column="2"
                                            Content="削除"
                                            Margin="5,5,0,5"
                                            Padding="10,5"
                                            Background="#d32f2f"
                                            Foreground="WhiteSmoke"
                                            Click="DeleteCharacterButton_Click"
                                            ToolTip="Delete this character"/>
                                </Grid>
                            </GroupBox>

                            <!-- 基本設定 -->
                            <GroupBox Header="基本設定"
                                      Margin="0,0,20,20"
                                      Padding="10"
                                      ToolTip="Basic setting">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="名前:"
                                                   VerticalAlignment="Center"
                                                   ToolTip="Name"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="CharacterNameTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"/>
                                    </Grid>

                                    <!-- VRMFilePathの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="VRMファイル:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="VRMFilePathTextBox"
                                                 Margin="0,5,5,5"
                                                 Foreground="#FF0078D7"
                                                 IsReadOnly="True"/>
                                        <Button Grid.Column="2"
                                                x:Name="BrowseVrmFileButton"
                                                Content="開く..."
                                                Padding="10,0"
                                                Click="BrowseVrmFileButton_Click"
                                                ToolTip="Open..."
                                                VerticalAlignment="Center"
                                                Foreground="#FF4873CF"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>

                            <!-- マテリアル・影設定 -->
                            <GroupBox Header="マテリアル・影設定"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel>
                                    <!-- MToon変換設定 -->
                                    <CheckBox x:Name="ConvertMToonCheckBox"
                                              Content="UnlitをMToonに変換する（正常に表示されないときに試してください）"
                                              Margin="0,5,0,10"
                                              Foreground="#FF4873CF"
                                              ToolTip="Convert Unlit to MToon"/>

                                    <!-- 影オフメッシュ設定 -->
                                    <CheckBox x:Name="EnableShadowOffCheckBox"
                                              Content="指定したメッシュに影を落とさない"
                                              Margin="0,5,0,5"
                                              Foreground="#FF4873CF"
                                              ToolTip="Enable shadow off mesh"
                                              Checked="EnableShadowOffCheckBox_Checked"
                                              Unchecked="EnableShadowOffCheckBox_Unchecked"/>

                                    <!-- 影オフメッシュ名設定 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="メッシュ名:"
                                                   VerticalAlignment="Center"
                                                   Margin="20,0,0,0"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="ShadowOffMeshTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 ToolTip="カンマ区切りでメッシュ名を入力 (例: Face, U_Char_1)"/>
                                    </Grid>
                                    <!-- 影設定説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        顔など特定のメッシュに影を落としたくない場合に使用します
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>

                            <!-- LLMパラメータ -->
                            <GroupBox Header="言語生成AI"
                                      Margin="0,0,20,20"
                                      Padding="10">
                                <StackPanel Margin="1,0,0,0">

                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseLLMCheckBox"
                                                  Content="LLMを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use LLM"/>
                                    </Grid>

                                    <!-- APIキーの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="API Key:"
                                                   VerticalAlignment="Center"/>
                                        <PasswordBox Grid.Column="1"
                                                     x:Name="ApiKeyPasswordBox"
                                                     Margin="0,5"
                                                     PasswordChar="●"
                                                     Foreground="#FF4873CF"
                                                     ToolTip="Enter your API key"/>
                                    </Grid>

                                    <!-- LLMモデルの設定 -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="LLM Model:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 x:Name="LlmModelTextBox"
                                                 Margin="0,5"
                                                 Foreground="#FF0078D7"
                                                 Text=""/>
                                    </Grid>
                                    <!-- LLM説明テキスト -->
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="100,0,0,10">
                                        <TextBlock.Inlines>
                                            <Run Text="LiteLLM の書式で記載してください"/>
                                            <LineBreak/>
                                            <Run Text="ex) openai/gpt-4o-mini, gemini/gemini-2.0-flash, ollama_chat/gemma3:12b"/>
                                            <LineBreak/>
                                            <Run Text="詳細は "/>
                                            <Hyperlink NavigateUri="https://docs.litellm.ai/docs/providers"
                                                       RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="https://docs.litellm.ai/docs/providers"/>
                                            </Hyperlink>
                                            <Run Text=" を参照してください"/>
                                        </TextBlock.Inlines>
