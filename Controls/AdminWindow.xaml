                                    <Grid Margin="0,5">
                                        <CheckBox x:Name="IsUseTTSCheckBox"
                                                  Content="TTSを使用する"
                                                  Foreground="#FF4873CF"
                                                  ToolTip="Use TTS"/>
                                    </Grid>

                                    <!-- エンドポイントURLの設定 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="Endpoint URL:"
                                                   VerticalAlignment="Center"/>
