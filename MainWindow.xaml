<Window x:Class="CocoroDock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocoroDock"
        xmlns:controls="clr-namespace:CocoroDock.Controls"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="CocoroAI Ver. 4.1.3 Beta"
        Height="600"
        Width="500"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen">

        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ヘッダー部分 -->
                <Grid Grid.Row="0"
                      Background="#4873CF"
                      Height="60">
                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="20,0">
                                        <TextBlock Text="CocoroAI"
                                                   FontSize="24"
                                                   Foreground="WhiteSmoke"
                                                   FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="0,0,20,0"
                                            VerticalAlignment="Center">
                                        <Button x:Name="MicButton"
                                                ToolTip="マイク"
                                                Margin="0,0,10,0"
                                                Padding="8"
                                                Background="#4873CF"
                                                BorderThickness="0"
                                                Click="MicButton_Click"
                                                Width="40"
                                                Height="40">
                                                <svgc:SvgViewbox x:Name="MicButtonImage"
                                                                 Source="pack://application:,,,/Resource/icon/MicON.svg"
                                                                 Width="24"
                                                                 Height="24"/>
                                        </Button>

                                        <Button x:Name="MuteButton"
                                                ToolTip="TTS"
                                                Margin="0,0,10,0"
                                                Padding="8"
                                                Background="#4873CF"
                                                BorderThickness="0"
                                                Click="TTSButton_Click"
                                                Width="40"
                                                Height="40">
                                                <svgc:SvgViewbox x:Name="MuteButtonImage"
                                                                 Source="pack://application:,,,/Resource/icon/SpeakerON.svg"
                                                                 Width="24"
                                                                 Height="24"/>
                                        </Button>

                                        <Button x:Name="PauseScreenshotButton"
                                                ToolTip="画像送信を一時停止"
                                                Margin="0,0,10,0"
                                                Padding="8"
                                                Background="#4873CF"
                                                BorderThickness="0"
                                                Click="PauseScreenshotButton_Click"
                                                Width="40"
                                                Height="40">
                                                <svgc:SvgViewbox x:Name="ScreenshotButtonImage"
                                                                 Source="pack://application:,,,/Resource/icon/ScreenShotON.svg"
                                                                 Width="24"
                                                                 Height="24"/>
                                        </Button>

                                        <Button x:Name="AdminButton"
                                                ToolTip="設定"
                                                Padding="8"
                                                Background="#4873CF"
                                                BorderThickness="0"
                                                Click="AdminButton_Click"
                                                Width="40"
                                                Height="40">
                                                <svgc:SvgViewbox Source="pack://application:,,,/Resource/icon/Config.svg"
                                                                 Width="24"
                                                                 Height="24"/>
                                        </Button>
                                </StackPanel>
                        </Grid>
                </Grid>

                <!-- メインコンテンツ部分 -->
                <Grid Grid.Row="1"
                      Background="White">
                        <controls:ChatControl x:Name="ChatControlInstance"/>
                </Grid>

                <!-- フッター部分 -->
                <StatusBar Grid.Row="2"
                           Height="30"
                           Background="#F0F0F0">
                        <StatusBarItem>
                                <TextBlock x:Name="ConnectionStatusText"
                                           Text="状態: 切断"/>
                        </StatusBarItem>
                </StatusBar>

                <!-- シャットダウン中のオーバーレイ -->
                <Grid x:Name="ShutdownOverlay"
                      Grid.RowSpan="3"
                      Background="#CC000000"
                      Visibility="Collapsed">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="350"
                                Padding="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Border.Effect>
                                        <DropShadowEffect BlurRadius="20"
                                                          ShadowDepth="0"
                                                          Opacity="0.5"/>
                                </Border.Effect>
                                <StackPanel HorizontalAlignment="Center">
                                        <ProgressBar IsIndeterminate="True"
                                                     Height="4"
                                                     Width="200"
                                                     Margin="0,0,0,20"/>
                                        <TextBlock Text="シャットダウン中..."
                                                   FontSize="16"
                                                   Foreground="#222222"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>
                                        <TextBlock x:Name="MemoryCleanupText"
                                                   Text="記憶を整理しています"
                                                   FontSize="12"
                                                   Foreground="#222222"
                                                   HorizontalAlignment="Center"/>
                                </StackPanel>
                        </Border>
                </Grid>
        </Grid>
</Window>